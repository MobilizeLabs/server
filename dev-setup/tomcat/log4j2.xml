<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
<!--
    Both Tomcat and ohmage use java.util.logging and thus Tomcat's default logging configuration.

    Spring uses commons logging and then Log4J 2 because the location of this file is specified
    as a Java argument in Tomcat's setenv.sh.
-->
  <Appenders>
    <File name="LogFile" fileName="/var/log/ohmage/ohmage.log">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %p %c{1.} %X{request_id} [%t] %m%n"/>
    </File>
  </Appenders>
  <Loggers>
    <Root level="debug" additivity="true">
      <AppenderRef ref="LogFile"/>
    </Root>
  </Loggers>
</Configuration>
