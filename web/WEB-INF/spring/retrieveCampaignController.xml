<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
  <!--  
     Spring ApplicationContext configuration for configuration retrieval queries 
  -->
  
  <!-- Servlet-to-AW hooks -->
  <!-- create request object -->
  <bean id="retrieveCampaignAwRequestCreator" class="edu.ucla.cens.awserver.jee.servlet.glue.RetrieveCampaignAwRequestCreator" />
  <!-- validate input data (sanity check) -->
  <bean id="retrieveCampaignHttpServletRequestValidator" class="edu.ucla.cens.awserver.jee.servlet.validator.RetrieveCampaignValidator" />
  <!-- write output 
  <bean id="retrieveCampaignResponseWriter" class="edu.ucla.cens.awserver.jee.servlet.writer.RetrieveCampaignResponseWriter">
    <constructor-arg index="0">
      <ref bean="dataPointFunctionQueryFunctionNames" />
    </constructor-arg>
    <constructor-arg index="1"><ref bean="severeErrorResponse" /></constructor-arg>
  </bean>  -->
    
  <!-- Controller -->
  <bean id="retrieveCampaignController" class="edu.ucla.cens.awserver.controller.ControllerImpl">
    <constructor-arg index="0">
      <list>
        <ref bean="tokenBasedAuthenticationService" />
        <bean class="edu.ucla.cens.awserver.service.RetrieveCampaignStringToListParameterConverterService" />
        <ref bean="findCampaignRolesForUserService" />
        <ref bean="findAllFilteredCampaignsForLoggedInUserService" />
      </list>
    </constructor-arg>
    <constructor-arg index="1">
      <ref bean="serverErrorRequestAnnotator" />
    </constructor-arg>
    <property name="validators">
      <list>
        <ref bean="userTokenValidator" />
        <ref bean="classUrnListValidator" />
        <ref bean="campaignUrnListValidator" />
        <ref bean="startDateInMapValidator" />
        <ref bean="endDateInMapValidator" />
        <ref bean="retrieveCampaignOutputFormatValidator" />
        <ref bean="campaignRunningStateValidator" />
        <ref bean="campaignPrivacyStateValidator" />
      </list>
    </property>
    <property name="featureName"><value>campaign retrieval</value></property>
  </bean>
  
  <bean id="classUrnListValidator" class="edu.ucla.cens.awserver.validator.UrnListValidator">
    <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="0807" />
            <property name="text" value="invalid class URN list or invalid URN in list" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1"><value>class_urn_list</value></constructor-arg>
    <constructor-arg index="2"><value>false</value></constructor-arg>
  </bean>

  <bean id="campaignUrnListValidator" class="edu.ucla.cens.awserver.validator.UrnListValidator">
    <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="0807" />
            <property name="text" value="invalid campaign URN list or invalid URN in list" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1"><value>campaign_urn_list</value></constructor-arg>
    <constructor-arg index="2"><value>false</value></constructor-arg>
  </bean>
  
  <bean id="retrieveCampaignOutputFormatValidator" class="edu.ucla.cens.awserver.validator.StringAllowedValuesValidator">
    <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="0810" />
            <property name="text" value="invalid output format" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1"><value>output_format</value></constructor-arg>
    <constructor-arg index="2">
      <list>
        <value>short</value>
        <value>long</value>
      </list>
    </constructor-arg>
    <constructor-arg index="3"><value>true</value></constructor-arg>
    <property name="errorMessage">
      <value>invalid output format in request</value>
    </property>
  </bean>

  <bean id="campaignPrivacyStateValidator" class="edu.ucla.cens.awserver.validator.StringAllowedValuesValidator">
    <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="0811" />
            <property name="text" value="invalid privacy state" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1"><value>privacy_state</value></constructor-arg>
    <constructor-arg index="2"><ref bean="campaignPrivacyStates" /></constructor-arg>
    <constructor-arg index="3"><value>false</value></constructor-arg>
    <property name="errorMessage">
      <value>invalid privacy state in request</value>
    </property>
  </bean>

  <bean id="campaignRunningStateValidator" class="edu.ucla.cens.awserver.validator.StringAllowedValuesValidator">
    <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="0812" />
            <property name="text" value="invalid running state" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1"><value>running_state</value></constructor-arg>
    <constructor-arg index="2"><ref bean="campaignRunningStates" /></constructor-arg>
    <constructor-arg index="3"><value>false</value></constructor-arg>
    <property name="errorMessage">
      <value>invalid running state in request</value>
    </property>
  </bean>
  
  <bean id="userRoleValidator" class="edu.ucla.cens.awserver.validator.StringAllowedValuesValidator">
    <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="0813" />
            <property name="text" value="invalid user role" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1"><value>user_role</value></constructor-arg>
    <constructor-arg index="2"><ref bean="userRoles" /></constructor-arg>
    <constructor-arg index="3"><value>false</value></constructor-arg>
    <property name="errorMessage">
      <value>invalid user role in request</value>
    </property>
  </bean>
  
  <!-- Authentication -->
  <bean id="tokenBasedAuthenticationService" class="edu.ucla.cens.awserver.service.TokenBasedAuthenticationService">
    <constructor-arg index="0">
      <ref bean="userBin" />
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="0200" />
            <property name="text" value="authentication failed" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="findCampaignRolesForUserService" class="edu.ucla.cens.awserver.service.SimpleQueryService">
    <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.dao.FindAllCampaignRolesForUserDao">
        <constructor-arg index="0"><ref bean="dataSource"/></constructor-arg>
        <constructor-arg index="1"><value>true</value></constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="findAllFilteredCampaignsForLoggedInUserService" class="edu.ucla.cens.awserver.service.SimpleQueryService">
    <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.dao.FindAllFilteredCampaignsForLoggedInUserDao">
        <constructor-arg index="0"><ref bean="dataSource"/></constructor-arg>
      </bean>
    </constructor-arg>
  </bean> 

