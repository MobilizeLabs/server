<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

  <bean id="userRoleClassPopulationService" class="org.ohmage.service.UserRoleClassPopulationService">
    <constructor-arg>
      <bean class="org.ohmage.dao.UserRoleClassPopulationDao">
        <constructor-arg>
          <ref bean="dataSource" />
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <!-- To be removed once existing unused APIs (data point function query and user stats query) are updated or nuked -->
  <bean id="userRoleCheckService" class="org.ohmage.service.UserRoleCheckService">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0701" />
            <property name="text" value="invalid user in query" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
    
  <bean id="userExistsService" class="org.ohmage.service.UserExistsService">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1308" />
            <property name="text" value="User doesn't exist." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <bean class="org.ohmage.dao.UserExistsDao">
        <constructor-arg>
          <ref bean="dataSource" />
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
</beans>