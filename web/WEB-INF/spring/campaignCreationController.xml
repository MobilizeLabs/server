<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
  <!--  
     Spring ApplicationContext configuration for mobility data upload 
  -->

  <!-- Basic HTTP Validation -->
  <bean id="campaignCreationHttpServletRequestValidator" class="edu.ucla.cens.awserver.jee.servlet.validator.CampaignCreationValidator">
    <!-- Read the XML file. -->
    <constructor-arg index="0"><ref bean="diskItemFileFactory" /></constructor-arg>
    <!-- The maximum size in bytes of a request's file attachment. -->
    <constructor-arg index="1"><value>2097152</value></constructor-arg>
  </bean>
  
  <!-- Create the AwRequest Object -->
  <bean id="campaignCreationAwRequestCreator" class="edu.ucla.cens.awserver.jee.servlet.glue.CampaignCreationAwRequestCreator" />
  
  <!-- Write the Response -->
  <bean id="campaignCreationResponseWriter" class="edu.ucla.cens.awserver.jee.servlet.writer.CampaignCreationResponseWriter">
    <constructor-arg index="0">
      <bean id="campaignCreationErrorResponse" class="edu.ucla.cens.awserver.domain.ErrorResponse">
        <property name="code" value="0801" />
        <property name="text" value="Campaign creation failed." />
      </bean>
    </constructor-arg>
  </bean>
  
  <!-- Controller Definition -->
  <bean id="campaignCreationController" class="edu.ucla.cens.awserver.controller.ControllerImpl">
    <constructor-arg index="0">
      <!-- Services List (expected to be executed in-order) -->
      <list>
        <!-- Authenticate that the token the user is using is a valid token. -->
        <ref bean="tokenBasedAuthenticationService" />
        <ref bean="userCanCreateCampaignsValidationService" />
        <ref bean="classListValidationService" />
        <ref bean="campaignAlreadyExistsValidationService" />
        <ref bean="campaignCreationService" />
      </list>
    </constructor-arg>
    <constructor-arg index="1">
      <!-- The annotator for when something fails after validation but before the writer. -->
      <ref bean="serverErrorRequestAnnotator" />
    </constructor-arg>
    <property name="validators">
      <!-- Validates the individual items in the request. -->
      <list>
        <ref bean="userTokenValidator" />
        <ref bean="campaignRunningStateRequiredValidator" />
        <ref bean="campaignPrivacyStateRequiredValidator" />
        <ref bean="classListRequiredValidator" />
        <ref bean="campaignXmlRequiredValidator" />
        <ref bean="campaignDescriptionOptionalValidator" />
      </list>
    </property>
    <property name="featureName"><value>campaign creation</value></property>
  </bean>
  
  <!-- Controller's Beans Definitions -->  
  <bean id="classListRequiredValidator" class="edu.ucla.cens.awserver.validator.ClassListValidator">
    <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="0805" />
            <property name="text" value="Invalid initial class list." />
          </bean>
       </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <value>true</value>
    </constructor-arg>
  </bean>
  
  <bean id="campaignXmlRequiredValidator" class="edu.ucla.cens.awserver.validator.CampaignXmlValidator">
    <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="0804" />
            <property name="text" value="Invalid campaign XML." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="org.andwellness.config.xml.CampaignValidator" />
    </constructor-arg>
    <constructor-arg index="2">
      <value>/opt/aw/conf/configuration.xsd</value>
    </constructor-arg>
    <constructor-arg index="3">
      <value>true</value>
    </constructor-arg>
  </bean>
  
  <bean id="userCanCreateCampaignsValidationService" class="edu.ucla.cens.awserver.service.UserCanCreateCampaignsValidationService">
    <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="0204" />
            <property name="text" value="Insufficient permissions to create a campaign." />
          </bean>
       </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="edu.ucla.cens.awserver.dao.UserCanCreateCampaignsValidationDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="classListValidationService" class="edu.ucla.cens.awserver.service.ClassListValidationService">
    <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="0805" />
            <property name="text" value="Invalid class list in campaign creation." />
          </bean>
       </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="edu.ucla.cens.awserver.dao.ClassListValidationDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="campaignAlreadyExistsValidationService" class="edu.ucla.cens.awserver.service.CampaignAlreadyExistsValidationService">
    <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="0804" />
            <property name="text" value="Campaign already exists." />
          </bean>
       </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="edu.ucla.cens.awserver.dao.CampaignAlreadyExistsValidationDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="campaignCreationService" class="edu.ucla.cens.awserver.service.SimpleQueryService">
    <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.dao.CampaignCreationDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
</beans>