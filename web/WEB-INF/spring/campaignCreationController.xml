<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
  <!--  
     Spring ApplicationContext configuration for mobility data upload 
  -->

  <!-- Basic HTTP Validation -->
  <bean id="campaignCreationHttpServletRequestValidator" class="org.ohmage.jee.servlet.validator.CampaignCreationValidator">
    <!-- Read the XML file. -->
    <constructor-arg index="0"><ref bean="diskItemFileFactory" /></constructor-arg>
    <!-- The maximum size in bytes of a request's file attachment. -->
    <constructor-arg index="1"><value>2097152</value></constructor-arg>
  </bean>
  
  <!-- Create the AwRequest Object -->
  <bean id="campaignCreationAwRequestCreator" class="org.ohmage.jee.servlet.glue.CampaignCreationAwRequestCreator" />
  
  <!-- Write the Response -->
  <bean id="campaignCreationResponseWriter" class="org.ohmage.jee.servlet.writer.CampaignCreationResponseWriter">
    <constructor-arg index="0">
      <bean id="campaignCreationErrorResponse" class="org.ohmage.domain.ErrorResponse">
        <property name="code" value="0801" />
        <property name="text" value="Campaign creation failed." />
      </bean>
    </constructor-arg>
  </bean>
  
  <!-- Controller Definition -->
  <bean id="campaignCreationController" class="org.ohmage.controller.ControllerImpl">
    <constructor-arg index="0">
      <!-- Services List (expected to be executed in-order) -->
      <list>
        <!-- Authenticate that the token the user is using is a valid token. -->
        <ref bean="tokenBasedAuthenticationService" />
        <ref bean="userCanCreateCampaignsValidationService" />
        <ref bean="classesInListExistOptionalService" />
        <ref bean="campaignAlreadyExistsValidationService" />
        <ref bean="campaignXmlRequiredValidationService" />
        <ref bean="campaignCreationService" />
      </list>
    </constructor-arg>
    <constructor-arg index="1">
      <!-- The annotator for when something fails after validation but before the writer. -->
      <ref bean="serverErrorRequestAnnotator" />
    </constructor-arg>
    <property name="validators">
      <!-- Validates the individual items in the request. -->
      <list>
        <ref bean="userTokenValidator" />
        <ref bean="campaignRunningStateRequiredValidator" />
        <ref bean="campaignPrivacyStateRequiredValidator" />
        <ref bean="classListRequiredValidator" />
        <ref bean="descriptionOptionalValidator" />
      </list>
    </property>
    <property name="featureName"><value>campaign creation</value></property>
  </bean>
  
  <!-- Controller's Beans Definitions -->  
  <bean id="classListRequiredValidator" class="org.ohmage.validator.ClassListValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1204" />
            <property name="text" value="Invalid class list." />
          </bean>
       </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <value>true</value>
    </constructor-arg>
  </bean>
  
  <bean id="userCanCreateCampaignsValidationService" class="org.ohmage.service.UserCanCreateCampaignsValidationService">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0204" />
            <property name="text" value="Insufficient permissions to create a campaign." />
          </bean>
       </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="org.ohmage.dao.UserCanCreateCampaignsValidationDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="classesInListExistOptionalService" class="org.ohmage.service.GenericAnnotatingDaoService">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1205" />
            <property name="text" value="A class in the class list is unknown to the user. It could not exist in the system or the user could not have permissions to access it." />
          </bean>
       </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <bean class="org.ohmage.dao.ClassListValidationDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
        <constructor-arg index="1">
          <value>false</value>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <value>Problem with class in list.</value>
    </constructor-arg>
    <constructor-arg>
      <value>Validating the class list for this campaign creation request.</value>
    </constructor-arg>
  </bean>
  
  <bean id="campaignAlreadyExistsValidationService" class="org.ohmage.service.CampaignAlreadyExistsValidationService">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0804" />
            <property name="text" value="Campaign already exists." />
          </bean>
       </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="org.ohmage.dao.CampaignAlreadyExistsValidationDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="campaignCreationService" class="org.ohmage.service.SimpleQueryService">
    <constructor-arg index="0">
      <bean class="org.ohmage.dao.CampaignCreationDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
</beans>