<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
  <!--  
     Spring ApplicationContext configuration for class updates 
  -->
  
  <!-- Basic HTTP Validation -->
  <bean id="classUpdateHttpServletRequestValidator" class="org.ohmage.jee.servlet.validator.ClassUpdateValidator"/>
  
  <!-- Create the AwRequest Object -->
  <bean id="classUpdateAwRequestCreator" class="org.ohmage.jee.servlet.glue.ClassUpdateAwRequestCreator" />
  
  <!-- Write the Response -->
  <bean id="classUpdateResponseWriter" class="org.ohmage.jee.servlet.writer.ClassUpdateResponseWriter">
    <constructor-arg index="0">
      <bean id="classErrorResponse" class="org.ohmage.domain.ErrorResponse">
        <property name="code" value="1200" />
        <property name="text" value="General class manipulation error." />
      </bean>
    </constructor-arg>
  </bean>
  
  <!-- Controller Definition -->
  <bean id="classUpdateController" class="org.ohmage.controller.ControllerImpl">
    <constructor-arg index="0">
      <!-- Services to validate and populate information. -->
      <list>
        <!-- Validate the user's token and populate the request. -->
        <ref bean="tokenBasedAuthenticationService" />
        
        <!-- Class doesn't exist. -->
        <ref bean="classExistsService" />
        
        <!-- Is the user privileged in the class. -->
        <ref bean="userIsAdminOrPrivilegedInClassService" />
        
        <!-- Ensure that the users exist. -->
        <ref bean="usersInListExistServiceFromUserListAdd" />
        <ref bean="usersInListExistServiceFromUserListRemove" />
        <ref bean="usersInListExistServiceFromPrivilegedUserListAdd" />
        
        <!-- Perform update. -->
        <ref bean="classUpdateService" />
      </list>
    </constructor-arg>
    <constructor-arg index="1">
      <!-- The annotator for when something fails after validation but before the writer. -->
      <ref bean="serverErrorRequestAnnotator" />
    </constructor-arg>
    <property name="validators">
      <!-- Validates the individual items in the request. -->
      <list>
        <!-- Validate that the user's token is a valid token. -->
        <ref bean="userTokenValidator" />
        
        <!-- Validate that the class URN is a valid class URN. -->
        <ref bean="classUrnValidator" />
        
        <!-- Validate that the users in the lists are all valid usernames. -->
        <ref bean="userListAddOptionalValidator" />
        <ref bean="userListRemoveOptionalValidator" />
        <ref bean="privilegedUserListAddOptionalValidator" />
        
        <!-- Validate that none of the users in the lists are in any of the other lists. -->
        <ref bean="noDuplicateUsersInListsValidator" />
        
        <!-- Validate the new description of the class. -->
        <ref bean="descriptionOptionalValidator" />
        
        <!-- Validate the new name of the class. -->
        <ref bean="classNameOptionalValidator" />
      </list>
    </property>
    <property name="featureName"><value>class update</value></property>
  </bean>
  
  <!-- Supplamental Beans Definition -->
  <bean id="classUrnValidator" class="org.ohmage.validator.ClassUrnValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1201" />
            <property name="text" value="Invalid class URN." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="userListAddOptionalValidator" class="org.ohmage.validator.UserListValidator">
    <constructor-arg index="0"><value>[a-z\.]{9,15}</value></constructor-arg>
    <constructor-arg index="1">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1300" />
            <property name="text" value="Invalid username in request." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="2">
      <util:constant static-field="org.ohmage.request.InputKeys.USER_LIST_ADD"/>
    </constructor-arg>
    <constructor-arg index="3">
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <bean id="userListRemoveOptionalValidator" class="org.ohmage.validator.UserListValidator">
    <constructor-arg index="0"><value>[a-z\.]{9,15}</value></constructor-arg>
    <constructor-arg index="1">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1300" />
            <property name="text" value="Invalid username in request." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="2">
      <util:constant static-field="org.ohmage.request.InputKeys.USER_LIST_REMOVE"/>
    </constructor-arg>
    <constructor-arg index="3">
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <bean id="privilegedUserListAddOptionalValidator" class="org.ohmage.validator.UserListValidator">
    <constructor-arg index="0"><value>[a-z\.]{9,15}</value></constructor-arg>
    <constructor-arg index="1">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1300" />
            <property name="text" value="Invalid username in request." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="2">
      <util:constant static-field="org.ohmage.request.InputKeys.PRIVILEGED_USER_LIST_ADD"/>
    </constructor-arg>
    <constructor-arg index="3">
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <bean id="noDuplicateUsersInListsValidator" class="org.ohmage.validator.NoDuplicatesInListsValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1302" />
            <property name="text" value="Duplicate user in list." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <list>
        <util:constant static-field="org.ohmage.request.InputKeys.USER_LIST_ADD"/>
        <util:constant static-field="org.ohmage.request.InputKeys.USER_LIST_REMOVE"/>
        <util:constant static-field="org.ohmage.request.InputKeys.PRIVILEGED_USER_LIST_ADD"/>
      </list>
    </constructor-arg>
  </bean>
  
  <bean id="classNameRequiredValidator" class="org.ohmage.validator.ClassNameValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1202" />
            <property name="text" value="Invalid class name." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <value>true</value>
    </constructor-arg>
  </bean>
  
  <bean id="classNameOptionalValidator" class="org.ohmage.validator.ClassNameValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1202" />
            <property name="text" value="Invalid class name." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <bean id="userIsAdminOrPrivilegedInClassService" class="org.ohmage.service.UserIsAdminOrPrivilegedInClassService">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0206" />
            <property name="text" value="User does not have permissions to modify this class." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="org.ohmage.dao.UserIsAdminOrPrivilegedInClassDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="userIsAdminOrPrivilegedInClassesInListService" class="org.ohmage.service.GenericAnnotatingDaoService">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0206" />
            <property name="text" value="User does not have permissions to modify all of the classes in the roster." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="org.ohmage.dao.UserIsAdminOrPrivilegedInClassesInListDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <value>The user isn't an admin and isn't privileged in all of the classes in the list.</value>
    </constructor-arg>
    <constructor-arg>
      <value>Validating that the user is an admin or is privileged in all of the classes in the list.</value>
    </constructor-arg>
  </bean>
  
  <bean id="userIsAdminOrPrivilegedInClassesInRosterService" class="org.ohmage.service.GenericAnnotatingDaoService">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0206" />
            <property name="text" value="User does not have permissions to modify all of the classes in the roster." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="org.ohmage.dao.UserIsAdminOrPrivilegedInClassesInRosterDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <value>The user isn't an admin and isn't privileged in all of the classes in the roster.</value>
    </constructor-arg>
    <constructor-arg>
      <value>Validating that the user is an admin or is privileged in all of the classes in the roster.</value>
    </constructor-arg>
  </bean>
  
  <bean id="usersInListExistServiceFromUserListAdd" class="org.ohmage.service.UsersInListExistService">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1301" />
            <property name="text" value="User in list of users to add does not exist." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="org.ohmage.dao.UsersInListExistDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
        <constructor-arg index="1">
          <util:constant static-field="org.ohmage.request.InputKeys.USER_LIST_ADD"/>
        </constructor-arg>
        <constructor-arg>
          <value>false</value>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="usersInListExistServiceFromUserListRemove" class="org.ohmage.service.UsersInListExistService">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1301" />
            <property name="text" value="User in list of users to remove does not exist." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="org.ohmage.dao.UsersInListExistDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
        <constructor-arg index="1">
          <util:constant static-field="org.ohmage.request.InputKeys.USER_LIST_REMOVE"/>
        </constructor-arg>
        <constructor-arg>
          <value>false</value>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="usersInListExistServiceFromPrivilegedUserListAdd" class="org.ohmage.service.UsersInListExistService">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1301" />
            <property name="text" value="User in list of privileged users to add does not exist." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="org.ohmage.dao.UsersInListExistDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
        <constructor-arg index="1">
          <util:constant static-field="org.ohmage.request.InputKeys.PRIVILEGED_USER_LIST_ADD"/>
        </constructor-arg>
        <constructor-arg>
          <value>false</value>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="classUpdateService" class="org.ohmage.service.ClassUpdateService">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1200" />
            <property name="text" value="Failed to update the class." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="org.ohmage.dao.ClassUpdateDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
</beans>