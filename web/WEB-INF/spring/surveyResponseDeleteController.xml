<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
  
  <!-- Spring ApplicationContext configuration for /app/survey_response/delete -->
  
  <!-- Servlet-to-AW hooks -->
  <!-- "pre-validate" inbound data -->
  <bean id="surveyResponseDeleteHttpServletRequestValidator" class="edu.ucla.cens.awserver.jee.servlet.validator.SurveyResponseDeleteValidator" />
  <!-- create AwRequest from data in the HttpServletRequest -->
  <bean id="surveyResponseDeleteAwRequestCreator" class="edu.ucla.cens.awserver.jee.servlet.glue.SurveyResponseDeleteAwRequestCreator" />
  <!-- the response writer used is the simple successOrFailResponseWriter -->
  
  <!-- Controller -->
  <bean id="surveyResponseDeleteController" class="edu.ucla.cens.awserver.controller.ControllerImpl">
    <constructor-arg index="0">
      <list>
        <!-- authenticate -->
        <ref bean="tokenBasedAuthenticationService" />
        
        <!-- find the campaigns for the logged-in user -->
        <ref bean="userRoleCampaignPopulationService" />
        
        <!-- authorize -->
        <ref bean="userCampaignValidationService" />
        <ref bean="surveyResponseSupervisorDeleteCampaignRunningStateValidationService" />
        <ref bean="surveyResponseParticipantDeleteCampaignRunningStateValidationService" />
        <ref bean="surveyKeyExistsService" />
        <!-- if the logged-in user is a participant, they can only delete responses that they own -->
        <ref bean="surveyKeyExistsForParticipantValidationService" />
        
        <!-- perform the update query -->
        <ref bean="surveyResponseDeleteService" />
        
      </list>
    </constructor-arg>
    <constructor-arg index="1">
      <ref bean="serverErrorRequestAnnotator" />
    </constructor-arg>
    <property name="validators">
      <list>
        <ref bean="userTokenValidator" />
        <ref bean="campaignUrnValidator" />
        <ref bean="surveyResponseUpdateSurveyKeyValidator" />
      </list>      
    </property>
    <property name="featureName"><value>survey response delete</value></property>
  </bean>
  
  <bean id="surveyResponseSupervisorDeleteCampaignRunningStateValidationService" class="edu.ucla.cens.awserver.service.CampaignRunningStateUserRoleValidationService">
   <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="0716" />
            <property name="text" value="participants, analysts, or authors cannot delete survey responses in stopped campaigns" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1"><util:constant static-field="edu.ucla.cens.awserver.cache.CampaignRunningStateCache.RUNNING_STATE_STOPPED"/></constructor-arg>
    <constructor-arg index="2">
      <list>
        <util:constant static-field="edu.ucla.cens.awserver.cache.CampaignRoleCache.ROLE_SUPERVISOR"/>
      </list>
    </constructor-arg>
  </bean>
  
  <bean id="surveyResponseParticipantDeleteCampaignRunningStateValidationService" class="edu.ucla.cens.awserver.service.CampaignRunningStateUserRoleValidationService">
   <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="0716" />
            <property name="text" value="analysts and authors cannot delete survey responses" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1"><util:constant static-field="edu.ucla.cens.awserver.cache.CampaignRunningStateCache.RUNNING_STATE_RUNNING"/></constructor-arg>
    <constructor-arg index="2">
      <list>
        <util:constant static-field="edu.ucla.cens.awserver.cache.CampaignRoleCache.ROLE_PARTICIPANT"/>
        <util:constant static-field="edu.ucla.cens.awserver.cache.CampaignRoleCache.ROLE_SUPERVISOR"/>
      </list>
    </constructor-arg>
  </bean>
  
  <bean id="surveyResponseDeleteService" class="edu.ucla.cens.awserver.service.GenericAnnotatingDaoService">
    <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="0103" />
            <property name="text" value="Could not successfully delete a survey response." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="edu.ucla.cens.awserver.dao.SurveyResponseDeleteDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="2"><value>Could not successfully delete a survey response due to a database problem.</value></constructor-arg>
    <constructor-arg index="3"><value>Dispatching to DAO to delete a survey response.</value></constructor-arg>
  </bean>
  
</beans>
