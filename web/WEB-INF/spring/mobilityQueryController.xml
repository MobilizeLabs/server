<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
  <!--  
     Spring ApplicationContext configuration the data point API 
  -->
  
  <!-- Servlet-to-AW hooks -->
  <!-- "pre-validate" inbound data -->
  <bean id="mobilityQueryHttpServletRequestValidator" class="org.ohmage.jee.servlet.validator.MobilityQueryValidator" />
  <!-- create AwRequest from data in the HttpServletRequest -->
  <bean id="mobilityQueryAwRequestCreator" class="org.ohmage.jee.servlet.glue.MobilityQueryAwRequestCreator" />
  <!-- write outbound data, post-controller --> 
  <bean id="mobilityQueryResponseWriter" class="org.ohmage.jee.servlet.writer.MobilityQueryResponseWriter">
    <constructor-arg index="0"><ref bean="severeErrorResponse" /></constructor-arg>
  </bean>
    
  <!-- Controller - Many components used in the controller are shared with dataPointQueryController -->
  <bean id="mobilityDataPointQueryController" class="org.ohmage.controller.ControllerImpl">
    <constructor-arg index="0">
      <list>
        <ref bean="tokenOrUserPasswordAuthenticationService" />
        <ref bean="mobilityQueryService" />
     </list>
    </constructor-arg>
    <constructor-arg index="1">
      <ref bean="serverErrorRequestAnnotator" />
    </constructor-arg>
    <property name="validators">
      <list>
        <ref bean="requiredStartDateValidator" />
        <ref bean="userTokenValidator" />
      </list>      
    </property>
    <property name="featureName"><value>mobility query</value></property>
  </bean>
  
  <bean id="mobilityQueryService" class="org.ohmage.service.SimpleQueryService">
    <constructor-arg index="0">
      <bean id="mobilityQueryDao" class="org.ohmage.dao.MobilityQueryDao">
        <constructor-arg index="0"><ref bean="dataSource" /></constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
</beans>