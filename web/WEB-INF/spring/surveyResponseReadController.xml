<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
  <!--  
     Spring ApplicationContext configuration for /app/survey_response/read
  -->
  
  <!-- Servlet-to-AW hooks -->
  <!-- "pre-validate" inbound data -->
  <bean id="surveyResponseReadHttpServletRequestValidator" class="org.ohmage.jee.servlet.validator.SurveyResponseReadValidator" />
  
  <!-- create AwRequest from data in the HttpServletRequest -->
  <bean id="surveyResponseReadAwRequestCreator" class="org.ohmage.jee.servlet.glue.SurveyResponseReadAwRequestCreator" />
  
  <!-- write outbound data, post-controller --> 
  <bean id="surveyResponseReadResponseWriter" class="org.ohmage.jee.servlet.writer.SurveyResponseReadResponseWriter">
    <constructor-arg index="0"><ref bean="severeErrorResponse" /></constructor-arg>
    <constructor-arg index="1"><ref bean="surveyResponseReadColumnUrns" /></constructor-arg>
    <constructor-arg index="2"><bean class="org.ohmage.jee.servlet.writer.SurveyResponseReadJsonRowBasedOutputBuilder"/></constructor-arg>
    <constructor-arg index="3"><bean class="org.ohmage.jee.servlet.writer.SurveyResponseReadJsonColumnOutputBuilder"/></constructor-arg>
    <constructor-arg index="4"><bean class="org.ohmage.jee.servlet.writer.SurveyResponseReadCsvOutputBuilder"/></constructor-arg>
  </bean>
    
  <!-- Controller -->
  <bean id="surveyResponseReadController" class="org.ohmage.controller.ControllerImpl">
    <constructor-arg index="0">
      <list>
        <!-- authenticate -->
        <ref bean="tokenOrUserPasswordAuthenticationService" />
        
        <!-- convert string list params to actual lists -->
        <ref bean="surveyResponseReadParamConverterService" />
        
        <!-- find the campaigns for the logged-in user -->
        <ref bean="userRoleCampaignPopulationService" />
        
        <!-- authorize -->
        <ref bean="userCampaignValidationService" />
        <ref bean="campaignUserCheckService" />
        <ref bean="participantUserParamValidationService" />
        <ref bean="readOperationCampaignRunningStateValidationService" />
        <ref bean="readOperationCampaignPrivacyStateValidationService" />
        
        <!-- grab the XML config from the db -->
        <ref bean="findCampaignConfigurationService" />
        
        <!-- sanity check the query params against the config -->
        <ref bean="surveyResponseReadPromptIdValidationService" />
        <ref bean="surveyResponseReadSurveyIdValidationService" />
        
        <!-- run the query -->
        <ref bean="surveyResponseReadService" />
        
        <!-- filter the output based on the the privacy_state of the response, and the role of the currently logged-in user -->
        <bean class="org.ohmage.service.SurveyResponsePrivacyFilterService" />
        
      </list>
    </constructor-arg>
    <constructor-arg index="1">
      <ref bean="serverErrorRequestAnnotator" />
    </constructor-arg>
    <property name="validators">
      <list>
        <ref bean="tokenOrUserPasswordValidator" />
        <ref bean="optionalStartDateValidator" />
        <ref bean="optionalEndDateValidator" />
        <ref bean="startAndEndDateValidator" />
        <ref bean="userListValidator" />
        <ref bean="promptIdListSurveyIdListValidator" />
        <ref bean="columnListValidator" />
        <ref bean="outputFormatValidator" />
        <ref bean="suppressMetadataValidator" />
        <ref bean="prettyPrintValidator" />
        <ref bean="returnIdValidator" />
        <ref bean="sortOrderValidator" />
        <ref bean="collapseValidator" />
      </list>      
    </property>
    <property name="featureName"><value>survey response query</value></property>
  </bean>

  <bean id="userListValidator" class="org.ohmage.validator.UserListValidator">
    <constructor-arg index="0"><value>[a-z\.]{9,15}</value></constructor-arg>
    <constructor-arg index="1">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0704" />
            <property name="text" value="invalid user list in query" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="2">
        <util:constant static-field="org.ohmage.request.InputKeys.USER_LIST"/>
    </constructor-arg>
    <constructor-arg index="3">
      <value>true</value>
    </constructor-arg>
  </bean>

  <bean id="promptIdListSurveyIdListValidator" class="org.ohmage.validator.PromptIdListSurveyIdListValidator">
    <constructor-arg index="0"><value>[0-9a-zA-Z]{1,}</value></constructor-arg>
    <constructor-arg index="1">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0705" />
            <property name="text" value="invalid prompt_id_list or survey_id_list" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>

  <bean id="columnListValidator" class="org.ohmage.validator.ColumnListValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0708" />
            <property name="text" value="invalid column list" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1"><ref bean="surveyResponseReadColumnUrns" /></constructor-arg>
  </bean>
  
  <bean id="outputFormatValidator" class="org.ohmage.validator.OutputFormatValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0710" />
            <property name="text" value="invalid output format" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1"><ref bean="outputFormats" /></constructor-arg>
  </bean>
  
  <!-- 
    The URNs for prompt ids and survey ids are handled separately because their values are dependent on campaign configurations. 
  -->
  <util:list id="surveyResponseReadColumnUrns">
    <value>urn:ohmage:context:client</value>
    <value>urn:ohmage:context:timestamp</value>
    <value>urn:ohmage:context:timezone</value>
    <value>urn:ohmage:context:utc_timestamp</value>
    <value>urn:ohmage:context:launch_context_short</value>
    <value>urn:ohmage:context:launch_context_long</value>
    <value>urn:ohmage:context:location:status</value>
    <value>urn:ohmage:context:location:latitude</value>
    <value>urn:ohmage:context:location:longitude</value>
    <value>urn:ohmage:context:location:timestamp</value>
    <value>urn:ohmage:context:location:accuracy</value>
    <value>urn:ohmage:context:location:provider</value>
    <value>urn:ohmage:user:id</value>
    <value>urn:ohmage:survey:id</value>
    <value>urn:ohmage:survey:title</value>
    <value>urn:ohmage:survey:description</value>
    <value>urn:ohmage:survey:privacy_state</value>
    <value>urn:ohmage:repeatable_set:id</value>
    <value>urn:ohmage:repeatable_set:iteration</value>
    <value>urn:ohmage:prompt:response</value>
  </util:list>
  
  <util:list id="outputFormats">
    <value>json-columns</value>
    <value>json-rows</value>
    <value>csv</value>
  </util:list>
  
 <bean id="surveyResponseReadParamConverterService" class="org.ohmage.service.SurveyResponseReadParamConverterService" />
  
 <bean id="campaignUserCheckService" class="org.ohmage.service.CampaignUserCheckService">
    <constructor-arg index="0">
      <bean class="org.ohmage.dao.FindAllCampaignsForCurrentUserDao">
        <constructor-arg index="0"><ref bean="dataSource"/></constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0701" />
            <property name="text" value="invalid user in query" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="surveyResponseReadPromptIdValidationService" class="org.ohmage.service.SurveyResponseReadPromptIdValidationService">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0722" />
            <property name="text" value="invalid prompt id in query" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>

  <bean id="surveyResponseReadSurveyIdValidationService" class="org.ohmage.service.SurveyResponseReadSurveyIdValidationService">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0707" />
            <property name="text" value="invalid survey id in query" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="startAndEndDateValidator" class="org.ohmage.validator.SurveyResponseReadStartAndEndDateValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0711" />
            <property name="text" value="both start date and end date must be present or they must both be not present" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="suppressMetadataValidator" class="org.ohmage.validator.BooleanValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0714" />
            <property name="text" value="invalid suppress_metadata value" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1"><util:constant static-field="org.ohmage.request.InputKeys.SUPPRESS_METADATA"/></constructor-arg>
    <constructor-arg index="2"><value>false</value></constructor-arg>
  </bean>
  
  <bean id="prettyPrintValidator" class="org.ohmage.validator.BooleanValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0712" />
            <property name="text" value="invalid pretty_print value" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1"><util:constant static-field="org.ohmage.request.InputKeys.PRETTY_PRINT"/></constructor-arg>
    <constructor-arg index="2"><value>false</value></constructor-arg>
  </bean>
  
  <bean id="returnIdValidator" class="org.ohmage.validator.BooleanValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0713" />
            <property name="text" value="invalid return_id value" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1"><util:constant static-field="org.ohmage.request.InputKeys.RETURN_ID"/></constructor-arg>
    <constructor-arg index="2"><value>false</value></constructor-arg>
  </bean>
  
  <bean id="collapseValidator" class="org.ohmage.validator.BooleanValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0721" />
            <property name="text" value="invalid collapse value" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1"><util:constant static-field="org.ohmage.request.InputKeys.COLLAPSE"/></constructor-arg>
    <constructor-arg index="2"><value>false</value></constructor-arg>
  </bean>
  
  <bean id="sortOrderValidator" class="org.ohmage.validator.SortOrderValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0715" />
            <property name="text" value="invalid sort_order" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="findCampaignConfigurationService" class="org.ohmage.service.FindCampaignConfigurationService">
   <constructor-arg index="0">
      <bean class="org.ohmage.dao.FindCampaignConfigurationDao">
        <constructor-arg index="0"><ref bean="dataSource" /></constructor-arg>
        <constructor-arg index="1">
          <bean class="org.ohmage.domain.SurveyMapFromXmlBuilder" />
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>

  <bean id="surveyResponseReadService" class="org.ohmage.service.SimpleQueryService">
   <constructor-arg index="0">
      <bean class="org.ohmage.dao.SurveyResponseReadDao">
        <constructor-arg index="0"><ref bean="dataSource" /></constructor-arg>
        <constructor-arg index="1"><bean class="org.ohmage.domain.ConfigurationValueMerger" /></constructor-arg>
      </bean>
    </constructor-arg>
  </bean>

  <bean id="readOperationCampaignRunningStateValidationService" class="org.ohmage.service.CampaignRunningStateUserRoleValidationService">
   <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0716" />
            <property name="text" value="participants cannot query stopped campaigns" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1"><util:constant static-field="org.ohmage.cache.CampaignRunningStateCache.RUNNING_STATE_STOPPED"/></constructor-arg>
    <constructor-arg index="2">
      <list>
        <util:constant static-field="org.ohmage.cache.CampaignRoleCache.ROLE_AUTHOR"/>
        <util:constant static-field="org.ohmage.cache.CampaignRoleCache.ROLE_ANALYST"/>
        <util:constant static-field="org.ohmage.cache.CampaignRoleCache.ROLE_SUPERVISOR"/>
      </list>
    </constructor-arg>
  </bean>

  <bean id="readOperationCampaignPrivacyStateValidationService" class="org.ohmage.service.CampaignPrivacyStateUserRoleValidationService">
   <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0717" />
            <property name="text" value="authors or analysts cannot query private campaigns" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1"><util:constant static-field="org.ohmage.cache.CampaignPrivacyStateCache.PRIVACY_STATE_PRIVATE"/></constructor-arg>
    <constructor-arg index="2">
      <list>
        <util:constant static-field="org.ohmage.cache.CampaignRoleCache.ROLE_PARTICIPANT"/>
        <util:constant static-field="org.ohmage.cache.CampaignRoleCache.ROLE_AUTHOR"/>
        <util:constant static-field="org.ohmage.cache.CampaignRoleCache.ROLE_SUPERVISOR"/>
      </list>
    </constructor-arg>
  </bean>

  <bean id="participantUserParamValidationService" class="org.ohmage.service.ParticipantUserParamValidationService">
   <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0718" />
            <property name="text" value="a participant cannot query other user's data" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
</beans>
