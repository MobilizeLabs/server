<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

  <!-- Basic HTTP Validation -->
  <bean id="documentReadContentsHttpServletRequestValidator" class="edu.ucla.cens.awserver.jee.servlet.validator.DocumentReadContentsValidator" />
  
  <!-- Create the AwRequest Object -->
  <bean id="documentReadContentsAwRequestCreator" class="edu.ucla.cens.awserver.jee.servlet.glue.DocumentReadContentsAwRequestCreator" />
  
  <!-- Write the Response -->
  <bean id="documentReadContentsResponseWriter" class="edu.ucla.cens.awserver.jee.servlet.writer.DocumentReadContentsResponseWriter">
    <constructor-arg>
      <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
        <property name="code" value="1500" />
        <property name="text" value="General document read error." />
      </bean>
    </constructor-arg>
  </bean>
  
  <!-- Controller Definition -->
  <bean id="documentReadContentsController" class="edu.ucla.cens.awserver.controller.ControllerImpl">
    <constructor-arg>
      <!-- Services List (expected to be executed in-order) -->
      <list>
        <!-- Authenticate that the token the user is using is a valid token. -->
        <ref bean="tokenBasedAuthenticationService" />

        <!-- Ensure the document exists. -->
        <ref bean="documentExistsService" />
        
        <!-- Ensure the user has the permissions to delete the document. -->
        <ref bean="userCanReadDocumentService" />
        
        <!-- Insert the document. -->
        <ref bean="documentReadContentsService" />
      </list>
    </constructor-arg>
    <constructor-arg index="1">
      <!-- The annotator for when something fails after validation but before the writer. -->
      <ref bean="serverErrorRequestAnnotator" />
    </constructor-arg>
    <property name="validators">
      <!-- Validates the individual items in the request. -->
      <list>
        <!-- Validate each of the items in the request. -->
        <ref bean="userTokenValidator" />
        <ref bean="documentIdRequiredValidator" />
      </list>
    </property>
    <property name="featureName"><value>document read contents</value></property>
  </bean>
  
  <!-- Service to Delete a Document -->
  <bean id="documentReadContentsService" class="edu.ucla.cens.awserver.service.GenericAnnotatingDaoService">
    <constructor-arg>
      <ref bean="documentManipulationError" />
    </constructor-arg>
    <constructor-arg>
      <bean class="edu.ucla.cens.awserver.dao.DocumentReadContentsDao">
        <constructor-arg>
          <ref bean="dataSource" />
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <value>An error occurred while reading the document's contents.</value>
    </constructor-arg>
    <constructor-arg>
      <value>Retrieving the document's contents.</value>
    </constructor-arg>
  </bean>
  
</beans>