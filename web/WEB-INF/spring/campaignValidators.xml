<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
                           
  <!-- These have been generalized and no longer belong here, but I am not sure where else to put them. -->
  <bean id="descriptionRequiredValidator" class="org.ohmage.validator.DescriptionValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0814" />
            <property name="text" value="Invalid campaign description." />
          </bean>
       </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <value>true</value>
    </constructor-arg>
  </bean>
  
  <bean id="descriptionOptionalValidator" class="org.ohmage.validator.DescriptionValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0814" />
            <property name="text" value="Invalid campaign description." />
          </bean>
       </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <value>false</value>
    </constructor-arg>
  </bean>
         
  <!-- Begin Campaign Validators -->                  
  <bean id="campaignUrnValidator" class="org.ohmage.validator.CampaignUrnValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0807" />
            <property name="text" value="Invalid campaign URN." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="campaignPrivacyStateRequiredValidator" class="org.ohmage.validator.CacheAllowedValuesValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0811" />
            <property name="text" value="invalid privacy state" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <ref bean="campaignPrivacyStateCache" />
    </constructor-arg>
    <constructor-arg index="2">
      <util:constant static-field="org.ohmage.request.InputKeys.PRIVACY_STATE"/>
    </constructor-arg>
    <constructor-arg index="3"><value>true</value></constructor-arg>
  </bean>
  
  <bean id="campaignPrivacyStateOptionalValidator" class="org.ohmage.validator.CacheAllowedValuesValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0811" />
            <property name="text" value="invalid privacy state" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <ref bean="campaignPrivacyStateCache" />
    </constructor-arg>
    <constructor-arg index="2">
      <util:constant static-field="org.ohmage.request.InputKeys.PRIVACY_STATE"/>
    </constructor-arg>
    <constructor-arg index="3"><value>false</value></constructor-arg>
  </bean>

  <bean id="campaignRunningStateRequiredValidator" class="org.ohmage.validator.CacheAllowedValuesValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0812" />
            <property name="text" value="invalid running state" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <ref bean="campaignRunningStateCache" />
    </constructor-arg>
    <constructor-arg index="2">
      <util:constant static-field="org.ohmage.request.InputKeys.RUNNING_STATE"/>
    </constructor-arg>
    <constructor-arg index="3"><value>true</value></constructor-arg>
  </bean>
  
  <bean id="campaignRunningStateOptionalValidator" class="org.ohmage.validator.CacheAllowedValuesValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0812" />
            <property name="text" value="invalid running state" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <ref bean="campaignRunningStateCache" />
    </constructor-arg>
    <constructor-arg index="2">
      <util:constant static-field="org.ohmage.request.InputKeys.RUNNING_STATE"/>
    </constructor-arg>
    <constructor-arg index="3"><value>false</value></constructor-arg>
  </bean>
  
  <bean id="campaignUrnListOptionalValidator" class="org.ohmage.validator.UrnListValidator">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0807" />
            <property name="text" value="invalid campaign URN list or invalid URN in list" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="org.ohmage.request.InputKeys.CAMPAIGN_URN_LIST"/>
    </constructor-arg>
    <constructor-arg>
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <bean id="campaignUrnListRemoveOptionalValidator" class="org.ohmage.validator.UrnListValidator">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0807" />
            <property name="text" value="invalid campaign URN list or invalid URN in list" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="org.ohmage.request.InputKeys.CAMPAIGN_LIST_REMOVE"/>
    </constructor-arg>
    <constructor-arg>
      <value>false</value>
    </constructor-arg>
  </bean>
  
</beans>