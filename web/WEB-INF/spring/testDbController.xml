<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

  <!--  
     Spring ApplicationContext configuration for a simple DB test for playing around with design ideas. 
  -->

  <!--  Servlet-to-AW hooks -->
  <!--  create AwRequest from data in the HttpServletRequest  -->
  <bean id="testDbAwRequestCreator" class="edu.ucla.cens.awserver.jee.servlet.glue.AwRequestCreatorImpl" />
  <!--  copy outbound data into HttpServletRequest -->
  <bean id="testDbHttpSessionModifier" class="edu.ucla.cens.awserver.jee.servlet.glue.TestDbHttpSessionModifier" />
    
  <!--  Controller -->
  <!--  This test controller interacts with a DAO directly when it should be using a Service as a proxy to a DAO -->
  <bean id="testDbController" class="edu.ucla.cens.awserver.controller.TestDbController">
      <property name="dao" ref="testDao" />
  </bean>

  <!--  database logic -->
  <bean id="testDao" class="edu.ucla.cens.awserver.dao.TestDao">
      <constructor-arg index="0"><ref bean="dataSource" /></constructor-arg>
  </bean>

</beans>