<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

  <!-- Basic HTTP Validation -->
  <bean id="vizUserTimeseriesHttpServletRequestValidator" class="org.ohmage.jee.servlet.validator.VizUserTimeseriesValidator" />
  
  <!-- Create the AwRequest Object -->
  <bean id="vizUserTimeseriesAwRequestCreator" class="org.ohmage.jee.servlet.glue.VizUserTimeseriesRequestCreator" />
  
  <!-- Write the Response -->
  <bean id="vizUserTimeseriesResponseWriter" class="org.ohmage.jee.servlet.writer.VisualizationResponseWriter">
    <constructor-arg>
      <bean class="org.ohmage.domain.ErrorResponse">
        <property name="code" value="1700" />
        <property name="text" value="General visualization creation error." />
      </bean>
    </constructor-arg>
  </bean>
  
  <!-- Controller Definition -->
  <bean id="vizUserTimeseriesController" class="org.ohmage.controller.ControllerImpl">
    <constructor-arg>
      <!-- Services List (expected to be executed in-order) -->
      <list>
        <!-- Authenticate that the token the user is using is a valid token. -->
        <ref bean="tokenBasedAuthenticationService" />

        <!-- Send the request to the R-server. -->
        <ref bean="campaignExistsService" />
        
        <!-- Prompt exists in campaign. -->
        <ref bean="promptIdExistsService" />
        
        <!-- User exists. -->
        <ref bean="userExistsService" />
        
        <!-- Requester can view participants' information in campaign. -->
        <ref bean="userRoleCampaignPopulationService" />
        <ref bean="requesterHasPermissionsToViewOtherUsersSurveyResponsesInCampaignService" />
        
        <!-- Process the request -->
        <ref bean="vizUserTimeseriesService" />
      </list>
    </constructor-arg>
    <constructor-arg index="1">
      <!-- The annotator for when something fails after validation but before the writer. -->
      <ref bean="serverErrorRequestAnnotator" />
    </constructor-arg>
    <property name="validators">
      <!-- Validates the individual items in the request. -->
      <list>
        <!-- Validate each of the items in the request. -->
        <ref bean="userTokenValidator" />
        
        <ref bean="vizWidthValidator" />
        <ref bean="vizHeightValidator" />
        
        <ref bean="campaignUrnValidator" />
      </list>
    </property>
    <property name="featureName">
      <value>Prompt Timeseries Visualization</value>
    </property>
  </bean>
  
  <bean id="vizUserTimeseriesService" class="org.ohmage.service.VizUserTimeseriesService">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1703" />
            <property name="text" value="Error communicating with visualization server." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
</beans>