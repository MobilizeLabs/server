<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
  
  <bean id="campaignExistsDao" class="org.ohmage.dao.CampaignExistsDao">
    <constructor-arg index="0">
      <ref bean="dataSource"/>
    </constructor-arg>
  </bean>
  
  <bean id="campaignFromKeyExistsRequiredDao" class="org.ohmage.dao.CampaignFromKeyExistsDao">
    <constructor-arg>
      <ref bean="dataSource" />
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
  </bean>
  
  <bean id="campaignUrnListForDocumentCreationDao" class="org.ohmage.dao.FindAllCampaignsForCurrentUserWithRolesDao">
    <constructor-arg>
      <ref bean="dataSource" />
    </constructor-arg>
    <constructor-arg>
      <list>
        <util:constant static-field="org.ohmage.cache.CampaignRoleCache.ROLE_SUPERVISOR"/>
        <util:constant static-field="org.ohmage.cache.CampaignRoleCache.ROLE_AUTHOR"/>
        <util:constant static-field="org.ohmage.cache.CampaignRoleCache.ROLE_ANALYST"/>
        <util:constant static-field="org.ohmage.cache.CampaignRoleCache.ROLE_PARTICIPANT"/>
      </list>
    </constructor-arg>
  </bean>
                           
  <bean id="campaignExistsService" class="org.ohmage.service.CampaignExistsService">
    <constructor-arg index="0">
      <ref bean="campaignNotFoundError" />
    </constructor-arg>
    <constructor-arg index="1">
      <ref bean="campaignExistsDao" />
    </constructor-arg>
  </bean>
  
  <bean id="campaignXmlRequiredValidationService" class="org.ohmage.service.CampaignXmlValidatorService">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0804" />
            <property name="text" value="Invalid campaign XML." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg value="${system.configurationXmlSchemaFile}"/>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
  </bean>
  
  <bean id="campaignXmlOptionalValidationService" class="org.ohmage.service.CampaignXmlValidatorService">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0804" />
            <property name="text" value="Invalid campaign XML." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg value="${system.configurationXmlSchemaFile}"/>
    <constructor-arg>
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <bean id="campaignsInListExistAndRequestingUserBelongsOptionalService" class="org.ohmage.service.GenericAnnotatingDaoService">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0808" />
            <property name="text" value="Campaign in list doesn't exist." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <bean class="org.ohmage.dao.CampaignListValidationDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
        <constructor-arg>
          <value>false</value>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <value>A campaign in the list does not exist.</value>
    </constructor-arg>
    <constructor-arg>
      <value>Validating that all the campaigns in the campaign list parameter exist.</value>
    </constructor-arg>
  </bean>
  
  <bean id="userIsSupervisorInAllCampaignsInListOptionalService" class="org.ohmage.service.UserHasRolesInAllCampaignsInListService">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0816" />
            <property name="text" value="User is not a supervisor in all the campaigns in the list." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <list>
        <util:constant static-field="org.ohmage.cache.CampaignRoleCache.ROLE_SUPERVISOR"/>
      </list>
    </constructor-arg>
    <constructor-arg>
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <bean id="requesterHasPermissionsToViewOtherUsersSurveyResponsesInCampaignService" class="org.ohmage.service.RequesterCanViewSurveyResponsesService">
  <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0816" />
            <property name="text" value="Insufficient permissions to view other users' survey responses." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <bean class="org.ohmage.dao.FindCampaignPrivacyStateDao">
        <constructor-arg>
          <ref bean="dataSource" />
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  
  <bean id="newAndOldXmlsHaveSameHeaderInfoOptionalService" class="org.ohmage.service.NewAndOldCampaignXmlsHaveSameHeaderInfoService">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0818" />
            <property name="text" value="The new XML's URN and/or name don't match the current XML's URN and/or name." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <bean class="org.ohmage.dao.FindCampaignXmlDao">
        <constructor-arg>
          <ref bean="dataSource" />
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
  </bean>
            
  <bean id="promptIdExistsService" class="org.ohmage.service.PromptExistsService">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0817" />
            <property name="text" value="The prompt ID does not exist in the campaign." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <bean class="org.ohmage.dao.FindCampaignXmlDao">
        <constructor-arg>
          <ref bean="dataSource" />
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="org.ohmage.request.InputKeys.PROMPT_ID"/>
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
  </bean>
  
  <bean id="prompt2IdExistsService" class="org.ohmage.service.PromptExistsService">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0817" />
            <property name="text" value="The second prompt ID does not exist in the campaign." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <bean class="org.ohmage.dao.FindCampaignXmlDao">
        <constructor-arg>
          <ref bean="dataSource" />
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="org.ohmage.request.InputKeys.PROMPT2_ID"/>
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
  </bean>
  
</beans>