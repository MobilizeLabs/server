<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
                           
  <bean id="campaignExistsService" class="edu.ucla.cens.awserver.service.CampaignExistsService">
    <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="0808" />
            <property name="text" value="Campaign not found." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="edu.ucla.cens.awserver.dao.CampaignExistsDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="campaignXmlRequiredValidationService" class="edu.ucla.cens.awserver.service.CampaignXmlValidatorService">
    <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="0804" />
            <property name="text" value="Invalid campaign XML." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="org.andwellness.config.xml.CampaignValidator" />
    </constructor-arg>
    <constructor-arg index="2">
      <value>/opt/aw/conf/configuration.xsd</value>
    </constructor-arg>
    <constructor-arg index="3">
      <value>true</value>
    </constructor-arg>
  </bean>
  
  <bean id="campaignXmlOptionalValidationService" class="edu.ucla.cens.awserver.service.CampaignXmlValidatorService">
    <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="0804" />
            <property name="text" value="Invalid campaign XML." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="org.andwellness.config.xml.CampaignValidator" />
    </constructor-arg>
    <constructor-arg index="2">
      <value>/opt/aw/conf/configuration.xsd</value>
    </constructor-arg>
    <constructor-arg index="3">
      <value>false</value>
    </constructor-arg>
  </bean>
  
</beans>