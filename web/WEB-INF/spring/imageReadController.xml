<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
  <!--  
     Spring ApplicationContext configuration the image query API 
  -->
  
  <!-- Servlet-to-AW hooks -->
  <!-- "pre-validate" inbound data -->
  <bean id="imageQueryHttpServletRequestValidator" class="org.ohmage.jee.servlet.validator.ImageQueryValidator" />
  <!-- create AwRequest from data in the HttpServletRequest -->
  <bean id="imageQueryAwRequestCreator" class="org.ohmage.jee.servlet.glue.ImageQueryAwRequestCreator" />
  <!-- write outbound data, post-controller -->
  <bean id="imageQueryResponseWriter" class="org.ohmage.jee.servlet.writer.ImageQueryResponseWriter">
    <constructor-arg index="0"><ref bean="severeErrorResponse" /></constructor-arg>
  </bean>
  
    
  <!-- Controller -->
  <bean id="imageQueryController" class="org.ohmage.controller.ControllerImpl">
    <constructor-arg index="0">
      <list>
        <!-- authenticate -->
        <ref bean="tokenBasedAuthenticationService" />
        
        <!-- load campaign and user role information for the logged-in user -->
        <ref bean="userRoleCampaignPopulationService" />
        
        <!-- authorize -->
        <ref bean="userCampaignValidationService" />
        <ref bean="campaignUserCheckService" />
        <ref bean="participantUserParamValidationService" />
        <ref bean="readOperationCampaignRunningStateValidationService" />
        <ref bean="readOperationCampaignPrivacyStateValidationService" />
        <ref bean="findCampaignForMediaIdService" />
        
        <!-- query and filter results by their privacy states and the logged-in user's user role -->
        <ref bean="findUrlForMediaIdService" />
        
      </list>
    </constructor-arg>
    <constructor-arg index="1">
      <ref bean="serverErrorRequestAnnotator" />
    </constructor-arg>
    <property name="validators">
      <list>
        <ref bean="userTokenValidator" />
        <ref bean="imageSizeValidator" />
      </list>      
    </property>
    <property name="featureName"><value>image read</value></property>
  </bean>
  
  <bean id="imageSizeValidator" class="org.ohmage.validator.StringAllowedValuesValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0902" />
            <property name="text" value="invalid size parameter" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1"><value>size</value></constructor-arg>
    <constructor-arg index="2">
      <list>
        <value>small</value>
      </list>
    </constructor-arg>
    <constructor-arg index="3"><value>false</value></constructor-arg>
    <property name="errorMessage">
      <value>invalid size in request - the only allowed value is small</value>
    </property>
  </bean>
  
  <bean id="findCampaignForMediaIdService" class="org.ohmage.service.FindCampaignForMediaIdService">
    <constructor-arg index="0">
      <bean class="org.ohmage.dao.FindCampaignForMediaIdDao">
        <constructor-arg index="0"><ref bean="dataSource"/></constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0900" />
            <property name="text" value="no image found" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="2">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0901" />
            <property name="text" value="image does not belong to campaign" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
    <bean id="findUrlForMediaIdService" class="org.ohmage.service.FindUrlForMediaIdService">
    <constructor-arg index="0">
      <bean class="org.ohmage.dao.FindUrlForMediaIdDao">
        <constructor-arg index="0"><ref bean="dataSource"/></constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0900" />
            <property name="text" value="no image found" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="2">
      <ref bean="severeErrorJsonRequestAnnotator" />
    </constructor-arg>
  </bean>
  
</beans>