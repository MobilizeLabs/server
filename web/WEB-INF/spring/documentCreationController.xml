<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

  <!-- Basic HTTP Validation -->
  <bean id="documentCreationHttpServletRequestValidator" class="edu.ucla.cens.awserver.jee.servlet.validator.DocumentCreationValidator">
    <!-- Read the XML file. -->
    <constructor-arg index="0"><ref bean="diskItemFileFactory" /></constructor-arg>
  </bean>
  
  <!-- Create the AwRequest Object -->
  <bean id="documentCreationAwRequestCreator" class="edu.ucla.cens.awserver.jee.servlet.glue.DocumentCreationAwRequestCreator" />
  
  <!-- Write the Response -->
  <bean id="documentCreationResponseWriter" class="edu.ucla.cens.awserver.jee.servlet.writer.SuccessOrFailResponseWriter">
    <constructor-arg index="0">
      <bean id="documentCreationErrorResponse" class="edu.ucla.cens.awserver.domain.ErrorResponse">
        <property name="code" value="1500" />
        <property name="text" value="General document creation error." />
      </bean>
    </constructor-arg>
  </bean>
  
  <!-- Controller Definition -->
  <bean id="documentCreationController" class="edu.ucla.cens.awserver.controller.ControllerImpl">
    <constructor-arg index="0">
      <!-- Services List (expected to be executed in-order) -->
      <list>
        <!-- Authenticate that the token the user is using is a valid token. -->
        <ref bean="tokenBasedAuthenticationService" />
        
        <!-- Ensure that the URN doesn't already exist. -->
        <ref bean="documentUrnDoesntExistValidationService" />
        
        <!-- Insert the document. -->
        <ref bean="documentCreationService" />
      </list>
    </constructor-arg>
    <constructor-arg index="1">
      <!-- The annotator for when something fails after validation but before the writer. -->
      <ref bean="serverErrorRequestAnnotator" />
    </constructor-arg>
    <property name="validators">
      <!-- Validates the individual items in the request. -->
      <list>
        <!-- Validate each of the items in the request. -->
        <ref bean="userTokenValidator" />
        <ref bean="documentUrnRequiredValidator" />
        <ref bean="documentNameRequiredValidator" />
        <ref bean="documentRequiredValidator" />
        <ref bean="documentPrivacyStateRequiredValidator" />
        <ref bean="descriptionOptionalValidator" />
      </list>
    </property>
    <property name="featureName"><value>document creation</value></property>
  </bean>
  
  <bean id="documentCreationService" class="edu.ucla.cens.awserver.service.DocumentCreationService">
    <constructor-arg>
      <ref bean="documentManipulationError" />
    </constructor-arg>
    <constructor-arg>
      <bean class="edu.ucla.cens.awserver.dao.UrlBasedResourceDao">
        <constructor-arg>
          <ref bean="dataSource"/>
        </constructor-arg>
        <constructor-arg index="1" value="${system.imageDir}"/> <!-- root directory for storage -->
        <constructor-arg index="2" value=".jpg" /> <!-- file extension -->
        <constructor-arg index="3" value="1000" /> <!-- max number of dirs -->
        <constructor-arg index="4" value="1000" /> <!-- max number of files -->
      </bean>
    </constructor-arg>
  </bean>
  
</beans>