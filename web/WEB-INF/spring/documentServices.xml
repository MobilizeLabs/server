<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

  <!-- Services for documents -->  
  <bean id="campaignUrnsInDocumentRoleListExistOptionalService" class="org.ohmage.service.UrnsInUrnRoleListExistService">
    <constructor-arg>
      <ref bean="campaignNotFoundError" />
    </constructor-arg>
    <constructor-arg>
      <ref bean="campaignFromKeyExistsRequiredDao" />
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="org.ohmage.request.InputKeys.DOCUMENT_CAMPAIGN_ROLE_LIST" />
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="org.ohmage.dao.CampaignFromKeyExistsDao.KEY_CAMPAIGN_EXISTS_DAO"/>
    </constructor-arg>
    <constructor-arg>
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <bean id="classUrnsInDocumentRoleListExistOptionalService" class="org.ohmage.service.UrnsInUrnRoleListExistService">
    <constructor-arg>
      <ref bean="classNotFoundError" />
    </constructor-arg>
    <constructor-arg>
      <ref bean="classFromKeyExistsRequiredDao" />
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="org.ohmage.request.InputKeys.DOCUMENT_CLASS_ROLE_LIST" />
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="org.ohmage.dao.ClassFromKeyExistsDao.KEY_CLASS_EXISTS_DAO"/>
    </constructor-arg>
    <constructor-arg>
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <bean id="userCanAssociateDocumentsWithCampaignsInCampaignRoleListOptionalService" class="org.ohmage.service.UserCanAssociateDocumentsWithCampaignsInCampaignRoleListService">
    <constructor-arg>
      <ref bean="insufficientPermissionsToAssociateDocumentWithCampaignError" />
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="org.ohmage.request.InputKeys.DOCUMENT_CAMPAIGN_ROLE_LIST"/>
    </constructor-arg>
    <constructor-arg>
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <bean id="userCanAssociateDocumentsWithCampaignsInCampaignRoleAddListOptionalService" class="org.ohmage.service.UserCanAssociateDocumentsWithCampaignsInCampaignRoleListService">
    <constructor-arg>
      <ref bean="insufficientPermissionsToAssociateDocumentWithCampaignError" />
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="org.ohmage.request.InputKeys.CAMPAIGN_ROLE_LIST_ADD"/>
    </constructor-arg>
    <constructor-arg>
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <bean id="userCanAssociateDocumentsWithClassesInClassRoleListOptionalService" class="org.ohmage.service.UserCanAssoicateDocumentsWithClassesInClassRoleListService">
    <constructor-arg>
      <ref bean="insufficientPermissionsToAssociateDocumentWithClassError" />
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="org.ohmage.request.InputKeys.DOCUMENT_CLASS_ROLE_LIST"/>
    </constructor-arg>
    <constructor-arg>
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <bean id="userCanAssociateDocumentsWithClassesInClassRoleListAddOptionalService" class="org.ohmage.service.UserCanAssoicateDocumentsWithClassesInClassRoleListService">
    <constructor-arg>
      <ref bean="insufficientPermissionsToAssociateDocumentWithClassError" />
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="org.ohmage.request.InputKeys.CLASS_ROLE_LIST_ADD"/>
    </constructor-arg>
    <constructor-arg>
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <bean id="documentExistsService" class="org.ohmage.service.GenericAnnotatingDaoService">
    <constructor-arg>
      <ref bean="documentDoesntExistError" />
    </constructor-arg>
    <constructor-arg>
      <bean class="org.ohmage.dao.DocumentExistsDao">
        <constructor-arg>
          <ref bean="dataSource"/>
        </constructor-arg>
        <constructor-arg>
          <value>true</value>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <value>The document does not exist.</value>
    </constructor-arg>
    <constructor-arg>
      <value>Validating that the document exists.</value>
    </constructor-arg>
  </bean>

  <bean id="userCanDeleteDocumentService" class="org.ohmage.service.UserHasPermissionForDocumentService">
    <constructor-arg>
      <ref bean="insufficientPermissionsToDeleteDocumentError" />
    </constructor-arg>
    <constructor-arg>
      <bean class="org.ohmage.dao.FindAllDocumentsForRequestingUserWithRolesDao">
        <constructor-arg>
          <ref bean="dataSource"/>
        </constructor-arg>
        <constructor-arg>
          <list>
            <util:constant static-field="org.ohmage.cache.DocumentRoleCache.ROLE_OWNER"/>
          </list>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
  </bean>
  
  <bean id="userCanModifyDocumentService" class="org.ohmage.service.UserHasPermissionForDocumentService">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1514" />
            <property name="text" value="Insufficient permissions to modify the document." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <bean class="org.ohmage.dao.FindAllDocumentsForRequestingUserWithRolesDao">
        <constructor-arg>
          <ref bean="dataSource"/>
        </constructor-arg>
        <constructor-arg>
          <list>
            <util:constant static-field="org.ohmage.cache.DocumentRoleCache.ROLE_OWNER"/>
            <util:constant static-field="org.ohmage.cache.DocumentRoleCache.ROLE_WRITER"/>
          </list>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
  </bean>
  
  <bean id="userCanReadDocumentService" class="org.ohmage.service.UserHasPermissionForDocumentService">
    <constructor-arg>
      <ref bean="insufficientPermissionsToReadDocumentError" />
    </constructor-arg>
    <constructor-arg>
      <bean class="org.ohmage.dao.FindAllDocumentsForRequestingUserWithRolesDao">
        <constructor-arg>
          <ref bean="dataSource"/>
        </constructor-arg>
        <constructor-arg>
          <list>
            <util:constant static-field="org.ohmage.cache.DocumentRoleCache.ROLE_OWNER"/>
            <util:constant static-field="org.ohmage.cache.DocumentRoleCache.ROLE_WRITER"/>
            <util:constant static-field="org.ohmage.cache.DocumentRoleCache.ROLE_READER"/>
          </list>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
  </bean>
  
  <bean id="documentIdAggregationSpecificToRequestingUserRequiredService" class="org.ohmage.service.DocumentIdAggregationForRequestingUserService">
    <constructor-arg>
      <ref bean="documentIdsSpecificToRequestingUserDao" />
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
  </bean>
  
  <bean id="documentIdAggregationFromCampaignListOptionalService" class="org.ohmage.service.DocumentIdAggregationService">
    <constructor-arg>
      <ref bean="documentIdsFromCampaignListForRequestingUserDao" />
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="org.ohmage.request.InputKeys.CAMPAIGN_URN_LIST"/>
    </constructor-arg>
    <constructor-arg>
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <bean id="documentIdAggregationFromClassListOptionalService" class="org.ohmage.service.DocumentIdAggregationService">
    <constructor-arg>
      <ref bean="documentIdsFromClassListForRequestingUserDao" />
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="org.ohmage.request.InputKeys.CLASS_URN_LIST"/>
    </constructor-arg>
    <constructor-arg>
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <bean id="documentBelongsToCampaignsInListService" class="org.ohmage.service.ResultsFromDaoContainAllItemsInListService">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1515" />
            <property name="text" value="Document doesn't belong to a campaign in the campaign list to remove." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <bean class="org.ohmage.dao.FindAllCampaignsToWhichDocumentBelongsDao">
        <constructor-arg>
          <ref bean="dataSource" />
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="org.ohmage.request.InputKeys.CAMPAIGN_LIST_REMOVE"/>
    </constructor-arg>
    <constructor-arg>
      <value>Validating that all of the campaigns in the campaign list to remove are associated with this document.</value>
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
    <constructor-arg>
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <bean id="documentBelongsToClassesInListService" class="org.ohmage.service.ResultsFromDaoContainAllItemsInListService">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1515" />
            <property name="text" value="Document doesn't belong to a class in the class list to remove." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <bean class="org.ohmage.dao.FindAllClassesToWhichDocumentBelongsDao">
        <constructor-arg>
          <ref bean="dataSource" />
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="org.ohmage.request.InputKeys.CLASS_LIST_REMOVE"/>
    </constructor-arg>
    <constructor-arg>
      <value>Validating that all of the classes in the class list to remove are associated with this document.</value>
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
    <constructor-arg>
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <bean id="documentBelongsToDirectUsersInListService" class="org.ohmage.service.ResultsFromDaoContainAllItemsInListService">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1515" />
            <property name="text" value="Document doesn't directly belong to a user in the user list to remove." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <bean class="org.ohmage.dao.FindAllDirectUsersToWhichDocumentBelongsDao">
        <constructor-arg>
          <ref bean="dataSource" />
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="org.ohmage.request.InputKeys.USER_LIST_REMOVE"/>
    </constructor-arg>
    <constructor-arg>
      <value>Validating that all of the users in the user list to remove are associated with this document.</value>
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
    <constructor-arg>
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <!-- DAOs Pertaining to Documents -->
  <bean id="documentIdsSpecificToRequestingUserDao" class="org.ohmage.dao.FindAllDocumentsSpecificToRequestingUserWithRolesDao">
    <constructor-arg>
      <ref bean="dataSource" />
    </constructor-arg>
    <constructor-arg>
      <list>
        <util:constant static-field="org.ohmage.cache.DocumentRoleCache.ROLE_READER"/>
        <util:constant static-field="org.ohmage.cache.DocumentRoleCache.ROLE_WRITER"/>
        <util:constant static-field="org.ohmage.cache.DocumentRoleCache.ROLE_OWNER"/>
      </list>
    </constructor-arg>
  </bean>
  
  <bean id="documentIdsFromCampaignListForRequestingUserDao" class="org.ohmage.dao.FindAllDocumentsForRequestingUserFromCampaignListWithRolesDao">
    <constructor-arg>
      <ref bean="dataSource" />
    </constructor-arg>
    <constructor-arg>
      <list>
        <util:constant static-field="org.ohmage.cache.DocumentRoleCache.ROLE_READER"/>
        <util:constant static-field="org.ohmage.cache.DocumentRoleCache.ROLE_WRITER"/>
        <util:constant static-field="org.ohmage.cache.DocumentRoleCache.ROLE_OWNER"/>
      </list>
    </constructor-arg>
  </bean>
  
  <bean id="documentIdsFromClassListForRequestingUserDao" class="org.ohmage.dao.FindAllDocumentsForRequestingUserFromClassListWithRolesDao">
    <constructor-arg>
      <ref bean="dataSource" />
    </constructor-arg>
    <constructor-arg>
      <list>
        <util:constant static-field="org.ohmage.cache.DocumentRoleCache.ROLE_READER"/>
        <util:constant static-field="org.ohmage.cache.DocumentRoleCache.ROLE_WRITER"/>
        <util:constant static-field="org.ohmage.cache.DocumentRoleCache.ROLE_OWNER"/>
      </list>
    </constructor-arg>
  </bean>
  
</beans>