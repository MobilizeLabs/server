<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
  <!--  
     Spring ApplicationContext configuration for /app/campaign/read 
  -->
  
  <!-- Servlet-to-AW hooks -->
  <!-- create request object -->
  <bean id="campaignReadAwRequestCreator" class="org.ohmage.jee.servlet.glue.CampaignReadAwRequestCreator" />
  
  <!-- validate input data (sanity check) -->
  <bean id="campaignReadHttpServletRequestValidator" class="org.ohmage.jee.servlet.validator.CampaignReadValidator" />
  
  <!-- write output --> 
  <bean id="campaignReadResponseWriter" class="org.ohmage.jee.servlet.writer.CampaignReadResponseWriter">
    <constructor-arg index="0"><ref bean="severeErrorResponse" /></constructor-arg>
  </bean>
    
  <!-- Controller -->
  <bean id="campaignReadController" class="org.ohmage.controller.ControllerImpl">
    <constructor-arg index="0">
      <list>
        <ref bean="tokenOrUserPasswordAuthenticationService" />
        <bean class="org.ohmage.service.RetrieveCampaignStringToListParameterConverterService" />
        <ref bean="findCampaignRolesForUserService" />
        <ref bean="findAllFilteredCampaignsForLoggedInUserService" />
        <ref bean="findAllUserRolesForCampaignUrnsService" />
        <ref bean="findAllClassesForCampaignUrnsService" />
      </list>
    </constructor-arg>
    <constructor-arg index="1">
      <ref bean="serverErrorRequestAnnotator" />
    </constructor-arg>
    <property name="validators">
      <list>
        <ref bean="tokenOrUserPasswordValidator" />
        <ref bean="classUrnListValidator" />
        <ref bean="campaignUrnListOptionalValidator" />
        <ref bean="startDateInMapValidator" />
        <ref bean="endDateInMapValidator" />
        <ref bean="campaignReadOutputFormatValidator" />
        <ref bean="campaignRunningStateOptionalValidator" />
        <ref bean="campaignPrivacyStateOptionalValidator" />
      </list>
    </property>
    <property name="featureName"><value>campaign retrieval</value></property>
  </bean>
  
  <bean id="tokenOrUserPasswordValidator" class="org.ohmage.validator.TokenOrUserPasswordValidator">
    <constructor-arg index="0"><ref bean="userTokenValidator" /></constructor-arg>
    <constructor-arg index="1"><ref bean="userNameValidator" /></constructor-arg>
    <constructor-arg index="2"><ref bean="hashedPasswordValidator" /></constructor-arg>
  </bean>
  
  <bean id="classUrnListValidator" class="org.ohmage.validator.UrnListValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0807" />
            <property name="text" value="invalid class URN list or invalid URN in list" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1"><value>class_urn_list</value></constructor-arg>
    <constructor-arg index="2"><value>false</value></constructor-arg>
  </bean>
  
  <bean id="campaignReadOutputFormatValidator" class="org.ohmage.validator.StringAllowedValuesValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0810" />
            <property name="text" value="invalid output format" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1"><value>output_format</value></constructor-arg>
    <constructor-arg index="2">
      <list>
        <value>short</value>
        <value>long</value>
        <value>xml</value>
      </list>
    </constructor-arg>
    <constructor-arg index="3"><value>true</value></constructor-arg>
    <property name="errorMessage">
      <value>invalid output format in request</value>
    </property>
  </bean>
  
  <bean id="userRoleValidator" class="org.ohmage.validator.CacheAllowedValuesValidator">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0813" />
            <property name="text" value="invalid user role" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <ref bean="campaignRoleCache" />
    </constructor-arg>
    <constructor-arg index="2">
      <util:constant static-field="org.ohmage.request.InputKeys.USER_ROLE"/>
    </constructor-arg>
    <constructor-arg index="3">
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <!-- Authentication -->
  <bean id="tokenOrUserPasswordAuthenticationService" class="org.ohmage.service.TokenOrUserPasswordAuthenticationService">
    <constructor-arg index="0"><ref bean="tokenBasedAuthenticationService" /></constructor-arg>
    <constructor-arg index="1"><ref bean="authWithHashedPasswordService" /></constructor-arg>
  </bean>
  
  <bean id="tokenBasedAuthenticationService" class="org.ohmage.service.TokenBasedAuthenticationService">
    <constructor-arg index="0">
      <ref bean="userBin" />
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0200" />
            <property name="text" value="authentication failed" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="findCampaignRolesForUserService" class="org.ohmage.service.SimpleQueryService">
    <constructor-arg index="0">
      <bean class="org.ohmage.dao.FindAllCampaignRolesForUserDao">
        <constructor-arg index="0"><ref bean="dataSource"/></constructor-arg>
        <constructor-arg index="1"><value>true</value></constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="findAllFilteredCampaignsForLoggedInUserService" class="org.ohmage.service.SimpleQueryService">
    <constructor-arg index="0">
      <bean class="org.ohmage.dao.FindAllFilteredCampaignsForLoggedInUserDao">
        <constructor-arg index="0"><ref bean="dataSource"/></constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="findAllUserRolesForCampaignUrnsService" class="org.ohmage.service.SimpleQueryService">
    <constructor-arg index="0">
      <bean class="org.ohmage.dao.FindAllUserRolesForCampaignUrnsDao">
        <constructor-arg index="0"><ref bean="dataSource"/></constructor-arg>
      </bean>
    </constructor-arg>
  </bean> 
  
  <bean id="findAllClassesForCampaignUrnsService" class="org.ohmage.service.SimpleQueryService">
    <constructor-arg index="0">
      <bean class="org.ohmage.dao.FindAllClassesForCampaignUrnsDao">
        <constructor-arg index="0"><ref bean="dataSource"/></constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
   

</beans>