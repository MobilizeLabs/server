<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">


  <bean id="classFromKeyExistsRequiredDao" class="org.ohmage.dao.ClassFromKeyExistsDao">
    <constructor-arg>
      <ref bean="dataSource" />
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
  </bean>
  
  <bean id="userIsPrivilegedInAllClassesInListOptionalService" class="org.ohmage.service.UserHasRolesInAllClassesInListService">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1207" />
            <property name="text" value="User is not privileged in all the classes in the list." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <list>
        <util:constant static-field="org.ohmage.cache.ClassRoleCache.ROLE_PRIVILEGED"/>
      </list>
    </constructor-arg>
    <constructor-arg>
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <bean id="userIsPrivilegedInAllClassesInListRequiredService" class="org.ohmage.service.UserHasRolesInAllClassesInListService">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1207" />
            <property name="text" value="User is not privileged in all the classes in the list." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <list>
        <util:constant static-field="org.ohmage.cache.ClassRoleCache.ROLE_PRIVILEGED"/>
      </list>
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
  </bean>
  
  <bean id="classExistsService" class="org.ohmage.service.ClassExistsService">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1209" />
            <property name="text" value="Class does not exist." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <bean class="org.ohmage.dao.ClassExistsDao">
        <constructor-arg>
          <ref bean="dataSource" />
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
  </bean>
  
  <bean id="classDoesNotExistService" class="org.ohmage.service.ClassExistsService">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1209" />
            <property name="text" value="Class already exists." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <bean class="org.ohmage.dao.ClassExistsDao">
        <constructor-arg>
          <ref bean="dataSource" />
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <value>false</value>
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
  </bean>
  
  <bean id="classesInRosterExistRequiredService" class="org.ohmage.service.GenericAnnotatingDaoService">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1206" />
            <property name="text" value="A class in the roster does not exist." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <bean class="org.ohmage.dao.ClassesInClassRosterExistDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
        <constructor-arg>
          <value>true</value>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <value>A class in the roster does not exist.</value>
    </constructor-arg>
    <constructor-arg>
      <value>Validating that all of the classes in the roster exist.</value>
    </constructor-arg>
  </bean>
  
  <bean id="usersInRosterExistRequiredService" class="org.ohmage.service.GenericAnnotatingDaoService">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1206" />
            <property name="text" value="A user in the roster does not exist." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <bean class="org.ohmage.dao.UsersInRosterExistDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
        <constructor-arg>
          <value>true</value>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <value>A user in the roster does not exist.</value>
    </constructor-arg>
    <constructor-arg>
      <value>Validating that all of the users in the roster exist.</value>
    </constructor-arg>
  </bean>
  
</beans>