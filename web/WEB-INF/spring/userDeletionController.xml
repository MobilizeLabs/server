<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
  <!--  
     Spring ApplicationContext configuration for mobility data upload 
  -->
  
  <!-- Basic HTTP Validation -->
  <bean id="userDeletionHttpServletRequestValidator" class="org.ohmage.jee.servlet.validator.UserDeletionValidator" />
  
  <!-- Create the AwRequest Object -->
  <bean id="userDeletionAwRequestCreator" class="org.ohmage.jee.servlet.glue.UserDeletionRequestCreator" />
  
  <!-- Write the Response -->
  <bean id="userDeletionResponseWriter" class="org.ohmage.jee.servlet.writer.SuccessOrFailResponseWriter">
    <constructor-arg>
      <bean class="org.ohmage.domain.ErrorResponse">
        <property name="code" value="1317" />
        <property name="text" value="User deletion failed." />
      </bean>
    </constructor-arg>
  </bean>
  
  <!-- Controller Definition -->
  <bean id="userDeletionController" class="org.ohmage.controller.ControllerImpl">
    <constructor-arg index="0">
      <!-- Services List (expected to be executed in-order) -->
      <list>
        <!-- Authenticate that the token the user is using is a valid token. -->
        <ref bean="tokenBasedAuthenticationService" />
        <ref bean="usersInListExistService" />
        
        <!-- NOTE: Exactly one of the two must be used. -->
        <!-- This ensures that the requester is the only username in the list or that the user is an admin. -->
        <!-- <ref bean="requesterCanModifyUsersInListService" /> -->
        <!-- This ensures that the user is an admin. -->
        <ref bean="requesterIsAdminService" />
        
        <ref bean="userDeletionService" />
      </list>
    </constructor-arg>
    <constructor-arg index="1">
      <!-- The annotator for when something fails after validation but before the writer. -->
      <ref bean="serverErrorRequestAnnotator" />
    </constructor-arg>
    <property name="validators">
      <!-- Validates the individual items in the request. -->
      <list>
        <ref bean="userTokenValidator" />
        <ref bean="userListValidator" />
      </list>
    </property>
    <property name="featureName"><value>campaign deletion</value></property>
  </bean>
  
  <!-- Controller's Beans Definitions -->
  <bean id="userDeletionService" class="org.ohmage.service.SimpleQueryService">
    <constructor-arg>
      <bean class="org.ohmage.dao.UserDeletionDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
        <constructor-arg>
          <util:constant static-field="org.ohmage.request.InputKeys.USER_LIST"/>
        </constructor-arg>
        <constructor-arg>
          <ref bean="userBin"/>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
</beans>