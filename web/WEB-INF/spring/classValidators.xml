<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

  <bean id="classUrnListOptionalValidator" class="org.ohmage.validator.UrnListValidator">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1201" />
            <property name="text" value="Invalid class URN list or invalid URN in list." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="org.ohmage.request.InputKeys.CLASS_URN_LIST"/>
    </constructor-arg>
    <constructor-arg>
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <bean id="classUrnListRemoveOptionalValidator" class="org.ohmage.validator.UrnListValidator">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1201" />
            <property name="text" value="Invalid class URN list or invalid URN in list." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="org.ohmage.request.InputKeys.CLASS_LIST_REMOVE"/>
    </constructor-arg>
    <constructor-arg>
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <bean id="classRosterRequiredValidator" class="org.ohmage.validator.ClassRosterValidator">
    <constructor-arg>
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="1210" />
            <property name="text" value="The class roster is malformed." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
  </bean>
  
</beans>                           