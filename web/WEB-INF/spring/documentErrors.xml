<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

  <!-- The errors associated with documents. -->
  <bean id="documentManipulationError" class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
    <constructor-arg>
      <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
        <property name="code" value="1500" />
        <property name="text" value="Document manipulation error." />
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="documentNameInvalidError" class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
    <constructor-arg>
      <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
        <property name="code" value="1502" />
        <property name="text" value="Invalid document name." />
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="documentInvalidError" class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
    <constructor-arg>
      <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
        <property name="code" value="1503" />
        <property name="text" value="The document is invalid." />
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="documentPrivacyStateError" class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
    <constructor-arg>
      <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
        <property name="code" value="1504" />
        <property name="text" value="The privacy state for the document is invalid." />
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="documentCampaignRoleInvalidError" class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
    <constructor-arg>
      <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
        <property name="code" value="1506" />
        <property name="text" value="A campaign URN or document role is invalid in the list." />
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="documentClassRoleInvalidError" class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
    <constructor-arg>
      <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
        <property name="code" value="1507" />
        <property name="text" value="A class URN or document role is invalid in the list." />
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="insufficientPermissionsToAssociateDocumentWithCampaignError" class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
    <constructor-arg>
      <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
        <property name="code" value="1508" />
        <property name="text" value="Insufficient permissions to associate a document with a campaign in the request." />
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="insufficientPermissionsToAssociateDocumentWithClassError" class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
    <constructor-arg>
      <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
        <property name="code" value="1508" />
        <property name="text" value="Insufficient permissions to associate a document with a class in the request." />
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="documentDoesntExistError" class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
    <constructor-arg>
      <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
        <property name="code" value="1510" />
        <property name="text" value="There is no such document with the given ID." />
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="insufficientPermissionsToDeleteDocumentError" class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
    <constructor-arg>
      <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
        <property name="code" value="1511" />
        <property name="text" value="Insufficient permissions to delete the document." />
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="insufficientPermissionsToReadDocumentError" class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
    <constructor-arg>
      <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
        <property name="code" value="1512" />
        <property name="text" value="Insufficient permissions to read the document." />
      </bean>
    </constructor-arg>
  </bean>

</beans>