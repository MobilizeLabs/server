<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
                           
  <!-- Basic HTTP Validation -->
  <bean id="passwordChangeHttpServletRequestValidator" class="org.ohmage.jee.servlet.validator.PasswordChangeValidator">
  </bean>
  
  <!-- Create the AwRequest Object -->
  <bean id="passwordChangeAwRequestCreator" class="org.ohmage.jee.servlet.glue.PasswordChangeAwRequestCreator" />
  
  <!-- Write the Response -->
  <bean id="passwordChangeResponseWriter" class="org.ohmage.jee.servlet.writer.SuccessOrFailResponseWriter">
    <constructor-arg index="0">
      <bean id="passwordChangeErrorResponse" class="org.ohmage.domain.ErrorResponse">
        <property name="code" value="1305" />
        <property name="text" value="General password change failure." />
      </bean>
    </constructor-arg>
  </bean>
  
  <!-- Controller Definition -->
  <bean id="passwordChangeController" class="org.ohmage.controller.ControllerImpl">
    <constructor-arg index="0">
      <!-- Services List (expected to be executed in-order) -->
      <list>
        <!-- Authenticate that the token the user is using is a valid token. -->
        <ref bean="authWithClearTextPasswordAndNewAccountsService" />
        <ref bean="passwordChangeService" />
      </list>
    </constructor-arg>
    <constructor-arg index="1">
      <!-- The annotator for when something fails after validation but before the writer. -->
      <ref bean="serverErrorRequestAnnotator" />
    </constructor-arg>
    <property name="validators">
      <!-- Validates the individual items in the request. -->
      <list>
        <ref bean="userNameValidator" />
        <ref bean="clearTextPasswordValidator" />
        <ref bean="newPasswordValidator" />
      </list>
    </property>
    <property name="featureName"><value>password change</value></property>
  </bean>
  
  <bean id="authWithClearTextPasswordAndNewAccountsService" class="org.ohmage.service.AuthenticationService">
    <constructor-arg index="0">
      <ref bean="authWithClearTextPasswordDao" />
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0200" />
            <property name="text" value="authentication failed" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="2">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0201" />
            <property name="text" value="user not enabled for access" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="3">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0202" />
            <property name="text" value="default password disallowed" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="4"><value>true</value></constructor-arg> <!--  toggle whether new accounts are allowed access -->
  </bean>
  
  <bean id="passwordChangeService" class="org.ohmage.service.SimpleQueryService">
    <constructor-arg index="0">
      <bean class="org.ohmage.dao.PasswordChangeDao">
        <constructor-arg index="0"><ref bean="dataSource"/></constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
</beans>