<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
                           
  <!-- Basic HTTP Validation -->
  <bean id="passwordChangeHttpServletRequestValidator" class="edu.ucla.cens.awserver.jee.servlet.validator.PasswordChangeValidator">
  </bean>
  
  <!-- Create the AwRequest Object -->
  <bean id="passwordChangeAwRequestCreator" class="edu.ucla.cens.awserver.jee.servlet.glue.PasswordChangeAwRequestCreator" />
  
  <!-- Write the Response -->
  <bean id="passwordChangeResponseWriter" class="edu.ucla.cens.awserver.jee.servlet.writer.SuccessOrFailResponseWriter">
    <constructor-arg index="0">
      <bean id="passwordChangeErrorResponse" class="edu.ucla.cens.awserver.domain.ErrorResponse">
        <property name="code" value="1305" />
        <property name="text" value="General password change failure." />
      </bean>
    </constructor-arg>
  </bean>
  
  <!-- Controller Definition -->
  <bean id="passwordChangeController" class="edu.ucla.cens.awserver.controller.ControllerImpl">
    <constructor-arg index="0">
      <!-- Services List (expected to be executed in-order) -->
      <list>
        <!-- Authenticate that the token the user is using is a valid token. -->
        <ref bean="tokenOrUserPasswordAuthenticationService" />
        <ref bean="passwordChangeService" />
      </list>
    </constructor-arg>
    <constructor-arg index="1">
      <!-- The annotator for when something fails after validation but before the writer. -->
      <ref bean="serverErrorRequestAnnotator" />
    </constructor-arg>
    <property name="validators">
      <!-- Validates the individual items in the request. -->
      <list>
        <ref bean="tokenOrUserPasswordValidator" />
        <ref bean="newPasswordValidator" />
      </list>
    </property>
    <property name="featureName"><value>password change</value></property>
  </bean>
  
  <bean id="passwordChangeService" class="edu.ucla.cens.awserver.service.SimpleQueryService">
    <constructor-arg index="0">
      <bean class="edu.ucla.cens.awserver.dao.PasswordChangeDao">
        <constructor-arg index="0"><ref bean="dataSource"/></constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
</beans>