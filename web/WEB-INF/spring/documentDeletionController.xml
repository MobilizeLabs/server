<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

  <!-- Basic HTTP Validation -->
  <bean id="documentDeletionHttpServletRequestValidator" class="org.ohmage.jee.servlet.validator.DocumentDeletionValidator" />
  
  <!-- Create the AwRequest Object -->
  <bean id="documentDeletionAwRequestCreator" class="org.ohmage.jee.servlet.glue.DocumentDeletionAwRequestCreator" />
  
  <!-- Write the Response -->
  <bean id="documentDeletionResponseWriter" class="org.ohmage.jee.servlet.writer.SuccessOrFailResponseWriter">
    <constructor-arg>
      <bean class="org.ohmage.domain.ErrorResponse">
        <property name="code" value="1500" />
        <property name="text" value="General document deletion error." />
      </bean>
    </constructor-arg>
  </bean>
  
  <!-- Controller Definition -->
  <bean id="documentDeletionController" class="org.ohmage.controller.ControllerImpl">
    <constructor-arg>
      <!-- Services List (expected to be executed in-order) -->
      <list>
        <!-- Authenticate that the token the user is using is a valid token. -->
        <ref bean="tokenBasedAuthenticationService" />

        <!-- Ensure the document exists. -->
        <ref bean="documentExistsService" />
        
        <!-- Populate the user object with the user's highest role for this document, as well
             as the campaigns and classes to which they belong and their respective roles. -->
        <ref bean="populateRequestersHighestDocumentRoleService"  />
        <ref bean="userRoleCampaignPopulationService" />
        <ref bean="userRoleClassPopulationService" />
        
        <!-- Ensure the user has the permissions to delete the document. -->
        <ref bean="userCanDeleteDocumentService" />
        
        <!-- Insert the document. -->
        <ref bean="documentDeletionService" />
      </list>
    </constructor-arg>
    <constructor-arg index="1">
      <!-- The annotator for when something fails after validation but before the writer. -->
      <ref bean="serverErrorRequestAnnotator" />
    </constructor-arg>
    <property name="validators">
      <!-- Validates the individual items in the request. -->
      <list>
        <!-- Validate each of the items in the request. -->
        <ref bean="userTokenValidator" />
        <ref bean="documentIdRequiredValidator" />
      </list>
    </property>
    <property name="featureName"><value>document deletion</value></property>
  </bean>
  
  <!-- Service to Delete a Document -->
  <bean id="documentDeletionService" class="org.ohmage.service.GenericAnnotatingDaoService">
    <constructor-arg>
      <ref bean="documentManipulationError" />
    </constructor-arg>
    <constructor-arg>
      <bean class="org.ohmage.dao.DocumentDeletionDao">
        <constructor-arg>
          <ref bean="dataSource" />
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <value>An error occurred while deleting the document.</value>
    </constructor-arg>
    <constructor-arg>
      <value>Deleting the document.</value>
    </constructor-arg>
  </bean>

</beans>