<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
  
  <!-- Spring ApplicationContext configuration for /app/survey_response/update -->
  
  <!-- Servlet-to-AW hooks -->
  <!-- "pre-validate" inbound data -->
  <bean id="surveyResponseUpdateHttpServletRequestValidator" class="org.ohmage.jee.servlet.validator.SurveyResponseUpdateValidator" />
  <!-- create AwRequest from data in the HttpServletRequest -->
  <bean id="surveyResponseUpdateAwRequestCreator" class="org.ohmage.jee.servlet.glue.SurveyResponseUpdateAwRequestCreator" />
  <!-- the response writer used is the simple successOrFailResponseWriter -->
  
  <!-- Controller -->
  <bean id="surveyResponseUpdateController" class="org.ohmage.controller.ControllerImpl">
    <constructor-arg index="0">
      <list>
        <!-- authenticate -->
        <ref bean="tokenBasedAuthenticationService" />
        
        <!-- find the campaigns for the logged-in user -->
        <ref bean="userRoleCampaignPopulationService" />
        
        <!-- authorize -->
        <ref bean="userCampaignValidationService" />
        <ref bean="surveyResponseSupervisorUpdateCampaignRunningStateValidationService" />
        <ref bean="surveyResponseParticipantUpdateCampaignRunningStateValidationService" />
        <ref bean="surveyKeyExistsService" />
        <!-- if the logged-in user is a participant, they can only update responses that they own -->
        <ref bean="surveyKeyExistsForParticipantValidationService" />
        
        <!-- perform the update query -->
        <ref bean="surveyResponseUpdateService" />
        
      </list>
    </constructor-arg>
    <constructor-arg index="1">
      <ref bean="serverErrorRequestAnnotator" />
    </constructor-arg>
    <property name="validators">
      <list>
        <ref bean="userTokenValidator" />
        <ref bean="campaignUrnValidator" />
        <ref bean="campaignPrivacyStateRequiredValidator" />
        <ref bean="surveyResponseUpdateSurveyKeyValidator" />
      </list>      
    </property>
    <property name="featureName"><value>survey response update</value></property>
  </bean>
  
  <bean id="surveyResponseSupervisorUpdateCampaignRunningStateValidationService" class="org.ohmage.service.CampaignRunningStateUserRoleValidationService">
   <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0716" />
            <property name="text" value="participants, analysts, or authors cannot change survey response state in stopped campaigns" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1"><util:constant static-field="org.ohmage.cache.CampaignRunningStateCache.RUNNING_STATE_STOPPED"/></constructor-arg>
    <constructor-arg index="2">
      <list>
        <util:constant static-field="org.ohmage.cache.CampaignRoleCache.ROLE_SUPERVISOR"/>
      </list>
    </constructor-arg>
  </bean>
  
  <bean id="surveyResponseParticipantUpdateCampaignRunningStateValidationService" class="org.ohmage.service.CampaignRunningStateUserRoleValidationService">
   <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0716" />
            <property name="text" value="analysts and authors cannot change survey response state in running campaigns" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1"><util:constant static-field="org.ohmage.cache.CampaignRunningStateCache.RUNNING_STATE_RUNNING"/></constructor-arg>
    <constructor-arg index="2">
      <list>
        <util:constant static-field="org.ohmage.cache.CampaignRoleCache.ROLE_PARTICIPANT"/>
        <util:constant static-field="org.ohmage.cache.CampaignRoleCache.ROLE_SUPERVISOR"/>
      </list>
    </constructor-arg>
  </bean>
  
  <bean id="surveyResponseUpdateSurveyKeyValidator" class="org.ohmage.validator.InputKeyIsIntegerValidator">
    <constructor-arg index="0"><util:constant static-field="org.ohmage.request.InputKeys.SURVEY_KEY"/></constructor-arg>
    <constructor-arg index="1">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0720" />
            <property name="text" value="invalid survey_key" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="surveyKeyExistsService" class="org.ohmage.service.GenericAnnotatingDaoService">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0720" />
            <property name="text" value="invalid survey_key" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>  
    <constructor-arg index="1">
      <bean class="org.ohmage.dao.SurveyKeyExistsDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="2"><value>The survey key in question does not exist.</value></constructor-arg>
    <constructor-arg index="3"><value>Checking whether the survey key exists.</value></constructor-arg>
  </bean>
  
  <bean id="surveyKeyExistsForParticipantValidationService" class="org.ohmage.service.SurveyKeyExistsForParticipantValidationService">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0720" />
            <property name="text" value="invalid survey_key" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>  
    <constructor-arg index="1">
      <bean class="org.ohmage.dao.SurveyKeyExistsForLoggedInUserDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="surveyResponseUpdateService" class="org.ohmage.service.GenericAnnotatingDaoService">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0"> 
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0103" />
            <property name="text" value="Could not successfully update a survey response." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="1">
      <bean class="org.ohmage.dao.SurveyResponseUpdateDao">
        <constructor-arg index="0">
          <ref bean="dataSource"/>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg index="2"><value>Could not successfully update a survey response due to a database problem.</value></constructor-arg>
    <constructor-arg index="3"><value>Dispatching to DAO to update a survey response.</value></constructor-arg>
  </bean>
  
</beans>
