<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

  <bean id="formBasedLoginUserNameValidator" class="edu.ucla.cens.awserver.validator.AwRequestUserNameValidator">
    <constructor-arg index="0"><value>abcdefghijklmnopqrstuvwxyz.</value></constructor-arg>
    <constructor-arg index="1"><ref bean="failedRequestAnnotator" /></constructor-arg>
  </bean>
  
  <bean id="sensorUploadUserNameValidator" class="edu.ucla.cens.awserver.validator.AwRequestUserNameValidator">
    <constructor-arg index="0"><value>abcdefghijklmnopqrstuvwxyz.</value></constructor-arg>
    <constructor-arg index="1"><ref bean="userNameFailedJsonRequestAnnotator" /></constructor-arg>
  </bean>
  
  <bean id="emptySubdomainValidator" class="edu.ucla.cens.awserver.validator.NonEmptyStringValidator">
    <constructor-arg index="0"><value>subdomain</value></constructor-arg>
  </bean>
  
  <bean id="failedRequestAnnotator" class="edu.ucla.cens.awserver.validator.FailedRequestAnnotator" /> 
  
  <bean id="userNameFailedJsonRequestAnnotator" class="edu.ucla.cens.awserver.validator.FailedJsonRequestAnnotator">
    <constructor-arg index="0"><value>[{"error_code":"0200","error_text":"malformed username"}]</value></constructor-arg>
  </bean>
  
  
</beans>












