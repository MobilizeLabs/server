<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

  <!-- Validators for document CRUDs -->  
  <bean id="documentNameRequiredValidator" class="edu.ucla.cens.awserver.validator.GenericNameValidator">
    <constructor-arg>
      <ref bean="documentNameInvalidError" />
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="edu.ucla.cens.awserver.request.InputKeys.DOCUMENT_NAME"/>
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
  </bean>

  <bean id="documentRequiredValidator" class="edu.ucla.cens.awserver.validator.DocumentValidator">
    <constructor-arg>
      <ref bean="documentInvalidError" />
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
  </bean>
  
  <bean id="documentPrivacyStateRequiredValidator" class="edu.ucla.cens.awserver.validator.CacheAllowedValuesValidator">
    <constructor-arg>
      <ref bean="documentPrivacyStateError" />
    </constructor-arg>
    <constructor-arg>
      <ref bean="documentPrivacyStateCache" />
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="edu.ucla.cens.awserver.request.InputKeys.PRIVACY_STATE"/>
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
  </bean>
  
  <bean id="documentCampaignRoleOptionalValidator" class="edu.ucla.cens.awserver.validator.UrnRoleValidator">
    <constructor-arg>
      <ref bean="documentCampaignRoleInvalidError" />
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="edu.ucla.cens.awserver.request.InputKeys.DOCUMENT_CAMPAIGN_ROLE_LIST" />
    </constructor-arg>
    <constructor-arg>
      <ref bean="documentRoleCache" />
    </constructor-arg>
    <constructor-arg>
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <bean id="documentClassRoleOptionalValidator" class="edu.ucla.cens.awserver.validator.UrnRoleValidator">
    <constructor-arg>
      <ref bean="documentClassRoleInvalidError" />
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="edu.ucla.cens.awserver.request.InputKeys.DOCUMENT_CLASS_ROLE_LIST" />
    </constructor-arg>
    <constructor-arg>
      <ref bean="documentRoleCache" />
    </constructor-arg>
    <constructor-arg>
      <value>false</value>
    </constructor-arg>
  </bean>
  
  <bean id="documentIdRequiredValidator" class="edu.ucla.cens.awserver.validator.UuidValidator">
    <constructor-arg>
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg>
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="1600" />
            <property name="text" value="Document UUID is not a valid UUID." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="edu.ucla.cens.awserver.request.InputKeys.DOCUMENT_ID"/>
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
  </bean>
  
  <bean id="documentPersonalDocumentsValueRequiredValidator" class="edu.ucla.cens.awserver.validator.BooleanValidator">
    <constructor-arg>
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg>
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="1513" />
            <property name="text" value="Invalid value for personal_documents." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="edu.ucla.cens.awserver.request.InputKeys.DOCUMENT_PERSONAL_DOCUMENTS"/>
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
  </bean>
  
</beans>