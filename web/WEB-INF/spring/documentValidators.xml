<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

  <!-- Validators for document CRUDs -->
  <bean id="documentUrnRequiredValidator" class="edu.ucla.cens.awserver.validator.GenericUrnValidator">
    <constructor-arg>
      <ref bean="documentUrnInvalidError" />
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="edu.ucla.cens.awserver.request.InputKeys.DOCUMENT_URN"/>
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
  </bean>
  
  <bean id="documentNameRequiredValidator" class="edu.ucla.cens.awserver.validator.GenericNameValidator">
    <constructor-arg>
      <ref bean="documentNameInvalidError" />
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="edu.ucla.cens.awserver.request.InputKeys.DOCUMENT_NAME"/>
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
  </bean>

  <bean id="documentRequiredValidator" class="edu.ucla.cens.awserver.validator.DocumentValidator">
    <constructor-arg>
      <ref bean="documentInvalidError" />
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
  </bean>
  
  <bean id="documentPrivacyStateRequiredValidator" class="edu.ucla.cens.awserver.validator.CacheAllowedValuesValidator">
    <constructor-arg>
      <ref bean="documentPrivacyStateError" />
    </constructor-arg>
    <constructor-arg>
      <ref bean="documentPrivacyStateCache" />
    </constructor-arg>
    <constructor-arg>
      <util:constant static-field="edu.ucla.cens.awserver.request.InputKeys.PRIVACY_STATE"/>
    </constructor-arg>
    <constructor-arg>
      <value>true</value>
    </constructor-arg>
  </bean>
</beans>