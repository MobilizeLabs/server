<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">

  <!--
        Controller definition for config reads.
   -->
  <!-- Basic HTTP Validation -->
  <bean id="configReadHttpServletRequestValidator" class="edu.ucla.cens.awserver.jee.servlet.validator.ConfigReadValidator"/>
  
  <!-- Create the AwRequest Object -->
  <bean id="configReadAwRequestCreator" class="edu.ucla.cens.awserver.jee.servlet.glue.ConfigReadAwRequestCreator" />
  
  <!-- Write the Response -->
  <bean id="configReadResponseWriter" class="edu.ucla.cens.awserver.jee.servlet.writer.ConfigReadResponseWriter">
    <constructor-arg>
      <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
        <property name="code" value="0103" />
        <property name="text" value="General config read error." />
      </bean> 
    </constructor-arg>
  </bean>

  <!-- Controller Definition -->
  <bean id="configReadController" class="edu.ucla.cens.awserver.controller.ControllerImpl">
    <constructor-arg>
      <!-- Services to validate and populate information. -->
      <list>        
        <!-- Get the information. -->
        <ref bean="configReadService" />
      </list>
    </constructor-arg>
    <constructor-arg>
      <!-- The annotator for when something fails after validation but before the writer. -->
      <ref bean="serverErrorRequestAnnotator" />
    </constructor-arg>
    <property name="featureName">
      <value>config read</value>
    </property>
  </bean>
  
  <bean id="configReadService" class="edu.ucla.cens.awserver.service.ConfigReadService">
    <constructor-arg>
      <bean class="edu.ucla.cens.awserver.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="edu.ucla.cens.awserver.domain.ErrorResponse">
            <property name="code" value="0103" />
            <property name="text" value="General config read error." />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
</beans>