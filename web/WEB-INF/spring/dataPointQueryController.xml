<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd">
  <!--  
     Spring ApplicationContext configuration the data point API 
  -->
  
  <!-- Servlet-to-AW hooks -->
  <!-- "pre-validate" inbound data -->
  <bean id="dataPointQueryHttpServletRequestValidator" class="org.ohmage.jee.servlet.validator.DataPointQueryValidator" />
  <!-- create AwRequest from data in the HttpServletRequest -->
  <bean id="dataPointQueryAwRequestCreator" class="org.ohmage.jee.servlet.glue.DataPointQueryAwRequestCreator" />
  <!-- write outbound data, post-controller -->
  <bean id="dataPointQueryResponseWriter" class="org.ohmage.jee.servlet.writer.DataPointQueryResponseWriter">
    <constructor-arg index="0"><ref bean="severeErrorResponse" /></constructor-arg>
  </bean>
    
  <!-- Controller -->
  <bean id="dataPointQueryController" class="org.ohmage.controller.ControllerImpl">
    <constructor-arg index="0">
      <list>
        <ref bean="tokenBasedAuthenticationService" />
        <ref bean="userRoleCampaignPopulationService" />
        <ref bean="userCampaignValidationService" />
        <ref bean="userRoleCheckService" />
        <!-- grab the XML config from the db -->
        <ref bean="findCampaignConfigurationService" />
        <ref bean="queryPromptIdValidationService" />
        <ref bean="dataPointQueryService" />
      </list>
    </constructor-arg>
    <constructor-arg index="1">
      <ref bean="serverErrorRequestAnnotator" />
    </constructor-arg>
    <property name="validators">
      <list>
        <ref bean="requiredStartDateValidator" />
        <ref bean="requiredEndDateValidator" />
        <ref bean="userTokenValidator" />
      </list>      
    </property>
    <property name="featureName"><value>data point query</value></property>
  </bean>
  
  <bean id="queryPromptIdValidationService" class="org.ohmage.service.QueryPromptIdValidationService">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0703" />
            <property name="text" value="invalid promptId in query" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>

  <bean id="userRoleCheckService" class="org.ohmage.service.UserRoleCheckService">
    <constructor-arg index="0">
      <bean class="org.ohmage.validator.json.FailedJsonRequestAnnotator">
        <constructor-arg index="0">
          <bean class="org.ohmage.domain.ErrorResponse">
            <property name="code" value="0701" />
            <property name="text" value="invalid user in query" />
          </bean>
        </constructor-arg>
      </bean>
    </constructor-arg>
  </bean>
  
  <bean id="dataPointQueryService" class="org.ohmage.service.DataPointQueryService">
   <constructor-arg index="0">
      <ref bean="dataPointQueryDao" />
    </constructor-arg>
  </bean>
  
  <bean id="dataPointQueryDao" class="org.ohmage.dao.DataPointQueryDao">
    <constructor-arg index="0"><ref bean="dataSource" /></constructor-arg>
  </bean>
  
</beans>