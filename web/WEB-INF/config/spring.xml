<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.2.xsd
        http://www.springframework.org/schema/mvc
            http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">

    <!-- Use annotations. -->
    <mvc:annotation-driven ignoreDefaultModelOnRedirect="true" >
        <mvc:message-converters>
            <bean
                class="org.springframework.http.converter.ResourceHttpMessageConverter" />
            <bean 
                class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">

                <property name="objectMapper">
                    <bean class="org.ohmage.domain.jackson.OhmageObjectMapper" />
                </property>
            </bean>
        </mvc:message-converters>
    </mvc:annotation-driven>
    
    <!--
        Don't map these static resources to handlers, just serve them directly.
     -->
    <mvc:resources mapping="/**" location="*.html" />
    <mvc:resources mapping="/media/**" location="/media/" />
    
    <!-- Tells Spring to do automatic handling of multipart requests. -->
    <bean
        id="multipartResolver"
        class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        
        <!-- The maximum allowed size for an upload is 25 MB. -->
        <property name="maxUploadSize" value="26214400" />
    </bean>
    
    <!-- Register our universal exception handler. -->
    <bean class="org.ohmage.spring.OhmageHandlerExceptionResolver" />
    
    <!--
        Create the interceptors to handle modifying the request or response.
     -->
    <mvc:interceptors>
		<bean
		    class="org.ohmage.spring.CacheControlWebContentInterceptor" />
    </mvc:interceptors>
        
    <!--
        Tell Spring where to scan for annotations that link HTTP paths to their
        handlers.
     -->
    <context:component-scan base-package="org.ohmage" />
</beans>